    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
    </style>


    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/spinner_text_color</item>
        <item name="buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/spinner_text_color</item>
        <item name="buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="signuptext">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textColor">#29435C</item>

    </style>

    <style name="welcometext">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="mySpinnerItemStyle">
        <item name="backgroundTint">?attr/spinner_text_color</item>
        <item name="android:textColor">?attr/spinner_text_color</item>
        <item name="android:state_selected">@color/white</item>
        <item name="android:selectedWeekBackgroundColor">@color/white</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">?attr/spinner_text_color</item>

    </style>

    <style name="AutocompleteStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/spinner_text_color</item>

        <item name="android:dropDownListViewStyle">@style/DropDownMenuBackground</item>
    </style>

    <style name="DropDownMenuBackground">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SpinnerItemTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primarycolor</item>
    </style>

    <style name="SpinnerDropDownItem" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#993399</item>

    </style>

    <style name="MonthPickerDialogStyle">
        <item name="monthBgColor">@color/white</item>
        <item name="monthBgSelectedColor">@color/primarycolor</item>
        <item name="monthFontColorSelected">@color/white</item>
        <item name="monthFontColorNormal">@color/black</item>
        <item name="monthFontColorDisabled">@color/brown</item>

        <item name="headerBgColor">@color/black_overlay</item>
        <item name="headerFontColorSelected">@color/white</item>
        <item name="headerFontColorNormal">#85FFFFFF</item>
        <item name="headerTitleColor">#fff</item>

        <item name="dialogActionButtonColor">@color/black</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="android:textColor">@color/album_title</item>
        <item name="android:textColorHint">@color/album_title</item>
        <item name="colorControlNormal">@color/album_title</item>
        <item name="colorControlActivated">@color/album_title</item>
        <item name="colorControlHighlight">@color/album_title</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#2679AE</item>
        <item name="android:textColorSecondary">#2679AE</item>
        <item name="android:textColorHint">#2679AE</item>
        <item name="bs_dialogBackground">#ffffff</item>
        <item name="bs_dividerColor">#2679AE</item>
        <item name="bs_numColumns">2</item>
    </style>
    <style name="BottomSheet.StyleDialog_dark" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/colorMainactivitytext</item>
        <item name="android:textColorSecondary">@color/colorMainactivitytext</item>
        <item name="android:textColorHint">@color/colorMainactivitytext</item>
        <item name="bs_dialogBackground">@color/colorMainactivitycard</item>
        <item name="bs_dividerColor">@color/colorMainactivitytext</item>
        <item name="bs_numColumns">2</item>
    </style>

    <style name="Theme.UserDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/Activity_background</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primarycolor</item>
    </style>



    <!-- Text styles -->
    <style name="Text" parent="TextAppearance.AppCompat"></style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption"></style>

    <style name="Text.Small" parent="TextAppearance.AppCompat.Small"></style>

