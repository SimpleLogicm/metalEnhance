<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Cash_Collect"
    android:background="@drawable/metal_bg_all"
    android:id="@+id/h_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_cash">

    <androidx.core.widget.NestedScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_10_dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </ImageView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardbackground"
                app:cardCornerRadius="@dimen/common_10_dp"
                app:cardElevation="@dimen/common_4_dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/instrument_type"
                        style="@style/mySpinnerItemStyle"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor" />

                    <Spinner
                        android:id="@+id/reason_list"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        style="@style/mySpinnerItemStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp" />

                    <EditText
                        android:id="@+id/cust_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/Customer_Name"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/collect_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:hint="@string/Enter_Amount"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/details1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="left"
                        android:hint="@string/Detail1"
                        android:inputType="textMultiLine"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/details2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:digits="qwertzuiopasdfghjklyxcvbnm"
                        android:hint="@string/Detail2"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/details3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:digits="qwertzuiopasdfghjklyxcvbnm"
                        android:hint="@string/Detail3"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/details4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:digits="qwertzuiopasdfghjklyxcvbnm"
                        android:hint="@string/Detail4"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/details5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:digits="qwertzuiopasdfghjklyxcvbnm"
                        android:hint="@string/Details5"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scroll_parent"
                        android:layout_alignStart="@+id/collect_submit"
                        android:layout_alignLeft="@+id/collect_submit"
                        android:layout_alignEnd="@+id/collect_clear"
                        android:layout_alignRight="@+id/collect_clear"
                        android:textColor="?attr/visit_schedule_historytext"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Please_Sign_below"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="13dp" />


                    <com.github.gcacace.signaturepad.views.SignaturePad
                        android:id="@+id/signature_pad"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_border_black"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:penColor="?attr/filter_short_text_color" />

                    <EditText
                        android:id="@+id/collect_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:hint="@string/ERemarks"
                        android:paddingLeft="10dp"
                        android:textColor="#111111"
                        android:textSize="16dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/collect_clear"
                        android:layout_below="@+id/collect_remark"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/cam_btn"
                        android:scrollbars="horizontal"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/cam_btn"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/collect_remark"
                        android:layout_alignBaseline="@+id/recyclerview1"
                        android:layout_alignEnd="@+id/collect_remark"
                        android:layout_alignRight="@+id/collect_remark"
                        android:layout_gravity="right"
                        android:background="@drawable/cam_icon"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_marginBottom="@dimen/common_10_dp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/collect_clear"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Clear"
                    android:textAllCaps="false"
                    android:background="@drawable/btnstyle"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/collect_submit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Submit"
                    android:background="@drawable/btnstyle"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>