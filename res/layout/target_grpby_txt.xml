<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#faf8f8"
    card_view:cardCornerRadius="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/textView17"
        android:layout_alignRight="@+id/scrollableContents"
        android:layout_alignEnd="@+id/scrollableContents"
        android:layout_alignLeft="@+id/scrollableContents"
        android:layout_alignStart="@+id/scrollableContents">

        <RelativeLayout
            android:id="@+id/mainmenu_btn"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/month_grpby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MONTH"
                android:textColor="#111111"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/target_grpby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TARGET"
                android:textColor="#111111"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/saleupdate_btn"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.00"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ACHIEVED"
                android:textColor="#111111"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/achievd_grpby"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/salehistory_btn"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.00" >

            <TextView
                android:id="@+id/age_grpby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Percentage"
                android:textColor="#111111"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>