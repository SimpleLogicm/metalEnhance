<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/common_5_dp"
        card_view:cardBackgroundColor="?attr/cardbackground"
        android:layout_marginTop="@dimen/common_5_dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="@dimen/common_10_dp">

        <RelativeLayout
            android:id="@+id/hor_rlout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_toLeftOf="@+id/line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvsummary_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="?attr/filter_short_text_color"
                    android:text="Remark" />

                <TextView
                    android:id="@+id/tvsummary_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:drawableTint="?attr/New_orderoption_menueoptions_textcolor"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:textColor="?attr/hint_text_color"
                    android:text="dfghfdh" />

                <TextView
                    android:id="@+id/tvsummary_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="?attr/hint_text_color"                    android:paddingLeft="@dimen/common_5_dp"
                    android:text="$dfghfdh" />

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginBottom="@dimen/common_10_dp"
                android:layout_toLeftOf="@+id/dsfg">

            </View>

            <LinearLayout
                android:id="@+id/dsfg"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvsummary_ordertype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="?attr/hint_text_color"                    android:text="dfghfdh" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>