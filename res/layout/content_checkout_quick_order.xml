<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.kotGlobal.Checkout_quick_order"
    tools:showIn="@layout/activity_checkout_quick_order">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/signature_card1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="10dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="?attr/cardbackground"
                        app:cardElevation="7dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/linearLayout245"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/common_10_dp"
                            android:layout_marginRight="@dimen/common_10_dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/order_detail1"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:hint="@string/Required_by"
                                android:textSize="@dimen/common_15_dp"
                                android:imeOptions="actionDone"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:singleLine="true">

                                <requestFocus />
                            </EditText>

                            <EditText
                                android:id="@+id/order_detail21"
                                android:layout_width="250dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:enabled="false"
                                android:hint="Required By"                        android:visibility="gone"
                                android:imeOptions="actionDone"
                                android:singleLine="true">

                                <requestFocus />
                            </EditText>



                            <EditText
                                android:id="@+id/et_remark"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_below="@+id/et_details2"
                                android:gravity="left"
                                android:layout_margin="@dimen/common_5_dp"
                                android:textSize="@dimen/common_15_dp"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:background="@drawable/rounded_border_new"
                                android:hint="@string/ERemarks"/>

                            <TextView
                                style="@style/signuptext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginTop="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:text="@string/Payment_method"
                                android:textColor="?attr/visit_schedule_historytext"
                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginTop="@dimen/common_5_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    app:cardBackgroundColor="?attr/cardbackground"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/common_10_dp"
                                    android:layout_marginTop="@dimen/common_10_dp"
                                    android:layout_marginRight="@dimen/common_20_dp"
                                    app:cardElevation="@dimen/common_4_dp">

                                    <TextView
                                        android:id="@+id/btn_cash"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/work_sans"
                                        android:padding="@dimen/common_10_dp"
                                        android:text="@string/Cash"
                                        android:textColor="?attr/filter_short_text_color"
                                        android:textSize="14sp">

                                    </TextView>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="?attr/cardbackground"

                                    android:layout_marginBottom="@dimen/common_10_dp"
                                    android:layout_marginTop="@dimen/common_10_dp"
                                    app:cardElevation="@dimen/common_4_dp">

                                    <TextView
                                        android:id="@+id/btn_cheque"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/work_sans"
                                        android:padding="@dimen/common_10_dp"
                                        android:text="@string/Cheque"
                                        android:textColor="?attr/filter_short_text_color"
                                        android:textSize="14sp">

                                    </TextView>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/common_20_dp"
                                    android:layout_marginTop="@dimen/common_10_dp"
                                    app:cardBackgroundColor="?attr/cardbackground"
                                    android:layout_marginBottom="@dimen/common_10_dp"
                                    app:cardElevation="@dimen/common_4_dp">

                                    <TextView
                                        android:id="@+id/btn_neft"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/work_sans"
                                        android:padding="@dimen/common_10_dp"
                                        android:text="@string/NEFT"
                                        android:textColor="?attr/filter_short_text_color"
                                        android:textSize="14sp">

                                    </TextView>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/order_de"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="2">

                                <EditText
                                    android:id="@+id/order_detail2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.8"
                                    android:maxLength="6"
                                    android:cursorVisible="true"
                                    android:inputType="number"
                                    android:textCursorDrawable="@color/gray"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:textSize="@dimen/common_15_dp"
                                    >

                                </EditText>

                                <ImageView
                                    android:id="@+id/cam_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="0.2"
                                    android:visibility="visible"
                                    android:src="@drawable/cam">

                                </ImageView>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/signature_cardn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="?attr/cardbackground"
                        android:visibility="visible"
                        app:cardElevation="7dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="14dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1.4"
                                    android:text="@string/Please_Sign_here..."
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/save"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="@dimen/common_10_dp"
                                    android:layout_weight="0.3"
                                    android:fontFamily="@font/work_sans"
                                    android:gravity="right"
                                    android:text="@string/Save"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/clear"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="@dimen/common_10_dp"
                                    android:layout_weight="0.3"
                                    android:fontFamily="@font/work_sans"
                                    android:gravity="right"
                                    android:text="@string/Clear"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <com.github.gcacace.signaturepad.views.SignaturePad
                                android:id="@+id/signature_pad"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:background="?attr/cardbackground"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:penColor="?attr/filter_short_text_color" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:id="@+id/l_lout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/signature_cardn"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/signuptext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_5_dp"
                            android:gravity="center"
                            android:text="@string/Letterhead_Snap"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:textSize="14sp"></TextView>

                        <ImageView
                            android:id="@+id/get_icon"
                            android:layout_width="42dp"
                            android:layout_height="@dimen/common_30_dp"
                            android:src="@drawable/cam">

                        </ImageView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="?attr/colorPrimary"
                        android:text="@string/Selected_Products">

                    </TextView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/common_10_dp"
                        android:layout_marginRight="@dimen/common_10_dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/common_4_dp"
                        app:cardBackgroundColor="?attr/cardbackground"
                        android:layout_marginBottom="@dimen/common_10_dp"
                        app:cardCornerRadius="@dimen/common_10_dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:orientation="vertical"

                                >
                                <com.msimplelogic.swipelistview.SwipeListView
                                    android:id="@+id/example_lv_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    swipe:swipeFrontView="@+id/swipelist_frontview"
                                    swipe:swipeBackView="@+id/swipelist_backview"
                                    swipe:swipeCloseAllItemsWhenMoveList="true"
                                    swipe:swipeMode="both"
                                    android:divider="@color/colorPrimary"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:background="?attr/colorPrimary"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/total_ll"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.3"
                                    android:textColor="@color/white"
                                    android:layout_height="@dimen/common_40_dp"
                                    android:background="?attr/colorPrimary"
                                    android:weightSum="2"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txttotalPreview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="0dp"
                                        android:fontFamily="sans-serif"
                                        android:gravity="center_vertical"
                                        android:textSize="12dp"
                                        android:textColor="#ffffff"
                                        android:textStyle="bold"
                                        android:visibility="invisible"
                                        android:text="" />
                                    <TextView
                                        android:id="@+id/txttotalPreview2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="0dp"
                                        android:fontFamily="sans-serif"
                                        android:textSize="12dp"
                                        android:gravity="center_vertical"
                                        android:textColor="#ffffff"
                                        android:layout_marginLeft="@dimen/common_10_dp"
                                        android:textStyle="bold"
                                        android:text="@string/Total_Amount" />

                                    <TextView
                                        android:id="@+id/txttotalPreview1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text=""
                                        android:gravity="center_vertical"
                                        android:textColor="#ffffff"
                                        android:layout_toRightOf="@+id/txttotalPreview2"/>

                                    <TextView
                                        android:id="@+id/dis_pices"
                                        android:layout_width="0dp"
                                        android:layout_weight="0"
                                        android:textSize="10sp"
                                        android:layout_marginLeft="@dimen/common_5_dp"
                                        android:text="53535"
                                        android:textColor="?attr/hint_text_color"
                                        android:gravity="center_vertical|left"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/place_order_ll"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:textColor="@color/white"
                                    android:layout_height="@dimen/common_40_dp"
                                    android:background="?attr/colorPrimary"
                                    android:weightSum="2"
                                    android:layout_marginLeft="@dimen/common_2_dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"

                                        android:textColor="@color/white"
                                        android:text="@string/Place_Order"
                                        android:textSize="14sp"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:layout_height="match_parent">

                                    </TextView>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </LinearLayout>





</RelativeLayout>