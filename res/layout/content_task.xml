<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlinFiles.ActivityTask"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:id="@+id/ll">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/txt_tasknote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="?attr/filter_short_text_color"
                />

            <ImageView
                android:id="@+id/taskplus_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_circle_outline"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/img_sortby"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_below="@+id/txt_tasknote"
                android:src="@drawable/sortby_ordertype"
                android:layout_toLeftOf="@+id/txt_sortby"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txt_sortby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_by"
                android:layout_below="@+id/txt_tasknote"
                android:textStyle="bold"
                android:textColor="?attr/filter_short_text_color"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txt_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Filter"
                android:layout_below="@+id/txt_tasknote"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="?attr/filter_short_text_color"
                android:layout_toLeftOf="@+id/img_sortby"
                android:visibility="invisible"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/filterimg"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_below="@+id/txt_tasknote"
                android:src="@drawable/filterordertype_icon"
                android:layout_toLeftOf="@+id/txt_filter"
                android:layout_marginRight="5dp"
                android:visibility="invisible"
                android:layout_marginTop="8dp"
                />

            <AutoCompleteTextView
                android:id="@+id/search_task"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/Search_Task"
                android:drawableRight="@drawable/search_icon"
                android:background="@drawable/task_autocumplete_back"
                android:textSize="13dp"
                android:paddingLeft="20dp"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:cursorVisible="true"
                android:paddingRight="7dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txt_filter"/>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                card_view:cardBackgroundColor="?attr/cardbackground"
                android:id="@+id/bankcardId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/search_task"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="?attr/hint_text_color"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/today"/>



                        <View
                            android:id="@+id/view_line"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#c3c3c3"
                            android:layout_marginTop="5dp"></View>

                        <com.msimplelogic.swipelistview.SwipeListView
                            android:id="@+id/task_swipelist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            swipe:swipeFrontView="@+id/front"
                            swipe:swipeBackView="@+id/back"
                            android:layout_below="@+id/view_line"
                            swipe:swipeCloseAllItemsWhenMoveList="true"
                            swipe:swipeMode="both"
                            android:divider="@color/colorPrimary"
                            />

                    </LinearLayout>
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifview"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/giphyswipe" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>