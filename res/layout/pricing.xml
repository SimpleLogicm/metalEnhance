<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <RelativeLayout
                android:id="@+id/rlout_price"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.00">

                <TextView
                    android:id="@+id/textView1gh"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/buttonshape1"
                    android:gravity="center"
                    android:text="Price List"
                    android:textColor="#111111"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlout_stock"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1.00">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_50_dp"
                    android:gravity="center"
                    android:text="Stock"
                    android:textColor="#9d9d9d"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerNewOrder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border_new"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnCategory"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:hint="Select Category"
                    android:textColorHint="?attr/hint_text_color"
                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                    style="@style/mySpinnerItemStyle"
                    android:inputType="textPersonName"
                    android:paddingTop="10dp"></Spinner>

                <Spinner
                    android:id="@+id/spnProduct"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:hint="Select Product"
                    android:textColorHint="?attr/hint_text_color"
                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                    style="@style/mySpinnerItemStyle"
                    android:inputType="textPassword"
                    android:paddingTop="10dp" />

                <AutoCompleteTextView
                    android:id="@+id/Product_Variant"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:completionThreshold="1"
                    android:drawableRight="@drawable/search_icon"
                    android:drawableLeft="@drawable/mic"
                    android:ems="10"
                    android:textColorHint="?attr/hint_text_color"
                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                    android:hint="@string/Search_Variants"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textSize="15dp">

                    <requestFocus />
                </AutoCompleteTextView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cardList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>