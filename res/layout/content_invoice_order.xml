<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Invoice_order"
    tools:showIn="@layout/activity_invoice_order">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_above="@+id/btnlayout"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/common_10_dp"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_marginBottom="@dimen/common_5_dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="?attr/cardbackground"
                        app:cardCornerRadius="@dimen/common_10_dp"
                        android:elevation="@dimen/common_4_dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10_dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/work_sans"
                                    android:text="Order Date:"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_orderdate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/work_sans"
                                    android:textColor="?attr/hint_text_color"
                                    android:textSize="12sp">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10_dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/work_sans"
                                    android:text="Delivery Date:"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_deliverydate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/work_sans"
                                    android:textColor="?attr/hint_text_color"
                                    android:textSize="12sp">

                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10_dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/work_sans"
                                    android:text="Status:"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/work_sans"
                                    android:text=" processing"
                                    android:textColor="?attr/hint_text_color"
                                    android:textSize="12sp">

                                </TextView>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/common_1_dp"
                                android:background="#DDDDDD">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginTop="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="Customer Details:"
                                android:textColor="?attr/filter_short_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_cust_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="Abc"
                                android:textColor="?attr/hint_text_color"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_cust_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="email"
                                android:textColor="?attr/hint_text_color"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginTop="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="Billing Details:"
                                android:textColor="?attr/filter_short_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_cust_billing_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:textColor="?attr/hint_text_color"
                                android:text="Abc"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginTop="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="Shipping Details:"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_cust_shipping_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:layout_marginBottom="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="Abc"
                                android:textSize="12sp"
                                android:visibility="gone">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/common_1_dp"
                                android:background="#DDDDDD">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginTop="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:fontFamily="@font/work_sans"
                                android:text="Product Details:"
                                android:textColor="?attr/filter_short_text_color"
                                android:textSize="14sp"
                                android:textStyle="bold">

                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.4"
                                    android:textColor="?attr/hint_text_color"
                                    android:text="@string/Name">

                                </TextView>

                                <TextView
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/Code"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="12sp">

                                </TextView>

                                <TextView
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/Qty"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="12sp">

                                </TextView>

                                <TextView
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/Price"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="12sp">

                                </TextView>

                                <TextView
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/Amount"
                                    android:textColor="?attr/filter_short_text_color"
                                    android:textSize="12sp">

                                </TextView>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/common_10_dp">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>
            <LinearLayout
                android:id="@+id/btnlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/card_total"
                android:gravity="center"
                android:layout_marginTop="@dimen/common_5_dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_30_dp"
                    android:textColor="@color/white"
                    android:text="@string/OK_Button_label"
                    android:background="@drawable/btnstyle">

                </Button>
                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_30_dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:text="Share"
                    android:background="@drawable/btnstyle">

                </Button>
                <Button
                    android:id="@+id/btn_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_30_dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:text="Favourite"
                    android:background="@drawable/btnstyle">

                </Button>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_total"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                app:cardBackgroundColor="?attr/cardbackground"
                android:layout_margin="@dimen/common_10_dp"
                app:cardElevation="@dimen/common_4_dp"
                app:cardCornerRadius="@dimen/common_10_dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_margin="@dimen/common_10_dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:text="@string/Total_Amount"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/filter_short_text_color"
                        android:fontFamily="@font/work_sans"
                        android:layout_height="match_parent">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_totalamount"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textColor="?attr/filter_short_text_color"
                        android:fontFamily="@font/work_sans"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>




            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>


    </RelativeLayout>
