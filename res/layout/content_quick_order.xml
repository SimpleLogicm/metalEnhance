<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.kotGlobal.QuickOrder"
    tools:showIn="@layout/activity_quick_order">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    >

                    <Button

                        android:id="@+id/online_catalog_save"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_centerInParent="true"
                        android:background="@drawable/metal_button"
                        android:fontFamily="sans-serif"
                        android:text="@string/Save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />


                    <ImageView
                        android:id="@+id/barcode_scanner"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:src="?attr/qrcodeimg"

                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/total_ll"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_height="@dimen/common_40_dp"
                        android:background="?attr/colorPrimary"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttotalPreview"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:text="53535"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_height="match_parent">

                        </TextView>
                        <TextView
                            android:id="@+id/dis_pices"
                            android:layout_width="0dp"
                            android:layout_weight="0"
                            android:textSize="10sp"
                            android:layout_marginLeft="@dimen/common_5_dp"
                            android:text="53535"
                            android:visibility="gone"
                            android:textColor="@color/gray"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkout_ll"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_height="@dimen/common_40_dp"
                        android:background="?attr/colorPrimary"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/common_2_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:textColor="@color/white"
                            android:text="@string/PCheckout"
                            android:textSize="14sp"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent">

                        </TextView>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:src="@drawable/cart_checkout"
                            android:tint="@color/white"
                            android:layout_height="match_parent">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/content"
                android:layout_above="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/btn_mapview"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btnshapeprimarycolor"
                    android:gravity="center"
                    android:text="@string/Map_View"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_40_dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="?attr/cardbackground"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="4dp"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/Product_Variant"
                        android:layout_width="match_parent"
                        android:inputType="textMultiLine"
                        android:scrollbars="none"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:imeOptions="actionDone"
                        android:ems="10"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:backgroundTint="#ffffff"
                        android:textSize="14dp"
                        android:drawableRight="@drawable/search_icon"
                        android:hint="@string/Search_Customer">
                        <requestFocus />
                    </AutoCompleteTextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_40_dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="?attr/cardbackground"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="4dp"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/Product_Variant_search"
                        android:layout_width="match_parent"
                        android:inputType="textMultiLine"
                        android:scrollbars="none"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:imeOptions="actionDone"
                        android:ems="10"
                        android:backgroundTint="#ffffff"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:singleLine="true"
                        android:textSize="14dp"
                        android:drawableRight="@drawable/search_icon"
                        android:hint="@string/Search_Product">
                        <requestFocus />
                    </AutoCompleteTextView>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/search_lout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/search_spinner_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/hidden_buttonlayout"
                        android:layout_marginTop="3dp"
                        android:scrollbars="vertical"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/hidden_buttonlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <Button
                            android:id="@+id/list_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/metal_button"
                            android:paddingLeft="@dimen/button_left_padding"
                            android:paddingTop="@dimen/button_top_padding"
                            android:paddingRight="@dimen/button_right_padding"
                            android:paddingBottom="@dimen/button_bottom_padding"
                            android:text="@string/Cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:visibility="gone" />



                        <Button
                            android:id="@+id/list_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/metal_button"
                            android:paddingLeft="@dimen/button_left_padding"
                            android:paddingTop="@dimen/button_top_padding"
                            android:paddingRight="@dimen/button_right_padding"
                            android:paddingBottom="@dimen/button_bottom_padding"
                            android:text="@string/OK_Button_label"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:visibility="gone" />


                    </LinearLayout>
                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>






</RelativeLayout>