<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/tab_lout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/btn_daycoverage"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:text="Day Coverage"
                    android:textColor="#C5C5C5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/common_10_dp"/>

                <TextView
                    android:id="@+id/btn_viewtarget"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:text="View Target"
                    android:textColor="#C5C5C5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/common_10_dp"/>

                <TextView
                    android:id="@+id/btn_dashboard"
                    android:layout_width="126dp"
                    android:layout_height="30dp"
                    android:text="@string/DashBoard"
                    android:textColor="#1D4B7D"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:background="@drawable/buttonshape1"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/common_10_dp"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lanalysis_spinner"
                app:cardBackgroundColor="?attr/cardbackground"
                android:layout_below="@+id/tab_lout"
                app:cardElevation="@dimen/common_4_dp"
                app:cardCornerRadius="@dimen/common_10_dp"
                android:layout_margin="@dimen/common_10_dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <Spinner
                            android:id="@+id/achievement_spinner"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            style="@style/mySpinnerItemStyle"                            android:paddingTop="10dp" />

                        <Spinner
                            android:id="@+id/achievement_monthly_spinner"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            style="@style/mySpinnerItemStyle"                            android:layout_marginTop="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/combinecharta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/lanalysis_spinner"
                        android:orientation="vertical"
                        >

                        <com.github.mikephil.charting.charts.CombinedChart
                            android:id="@+id/combinechart"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>







</RelativeLayout>
