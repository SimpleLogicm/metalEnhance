<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_addretailer_main">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:id="@+id/newswipe_addretailer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/common_10_dp"
                    android:orientation="vertical">



                    <ImageView
                        android:id="@+id/swipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_20_dp"
                        android:layout_marginRight="@dimen/common_20_dp"
                        android:src="@drawable/fourtimeline1">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_15_dp"
                        android:layout_marginLeft="@dimen/common_15_dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Details"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="?attr/hint_text_color"
                            android:layout_weight="20"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Place"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="?attr/hint_text_color"
                            android:layout_weight="20"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Contact"
                            android:textSize="12dp"
                            android:layout_weight="20"
                            android:textColor="?attr/hint_text_color"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Done"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_addretailerdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/cardbackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"

                        android:layout_marginTop="@dimen/common_5_dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/common_10_dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/editTextRetailerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="@string/Retailer_Name"
                                android:textSize="@dimen/common_15_dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"
                                android:inputType="textPersonName"></EditText>

                            <EditText
                                android:id="@+id/editTextStoreName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="@string/Store_Name"
                                android:textSize="@dimen/common_15_dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:inputType="textPersonName"></EditText>

                            <Spinner
                                android:id="@+id/customer_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="Customer Type"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                style="@style/mySpinnerItemStyle"
                                android:inputType="textPassword" />

                            <Spinner
                                android:id="@+id/customer_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="Customer Category"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                style="@style/mySpinnerItemStyle"
                                android:inputType="textPassword" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_addretailerplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/cardbackground"
                        android:layout_marginTop="@dimen/common_5_dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/common_10_dp"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spnBeat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:layout_marginTop="5dp"
                                android:hint="Select Beat"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                style="@style/mySpinnerItemStyle"
                                android:inputType="textPassword"
                                android:paddingTop="5dp" />


                            <Spinner
                                android:id="@+id/spnCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:layout_marginTop="5dp"
                                android:hint="Select City"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                style="@style/mySpinnerItemStyle"
                                android:inputType="textPassword"
                                android:paddingTop="5dp" />


                            <Spinner
                                android:id="@+id/spnState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:layout_marginTop="5dp"
                                android:hint="Select State"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                style="@style/mySpinnerItemStyle"
                                android:inputType="textPassword"
                                android:paddingTop="5dp" />


                            <EditText
                                android:id="@+id/editTextAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="@string/Addressn"
                                android:textSize="@dimen/common_15_dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"
                                android:inputType="textPersonName"
                                android:paddingTop="10dp"></EditText>

                            <EditText
                                android:id="@+id/editTextStreet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="@string/Street"
                                android:textSize="@dimen/common_15_dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:inputType="textPersonName"
                                android:paddingTop="10dp"></EditText>

                            <EditText
                                android:id="@+id/editTextLandMark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="@string/LandMark"
                                android:textSize="@dimen/common_15_dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:inputType="textPersonName"
                                android:paddingTop="10dp"></EditText>


                            <EditText
                                android:id="@+id/editTextPin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:digits="0123456789"
                                android:hint="@string/PIN"
                                android:inputType="number"
                                android:maxLength="6"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/common_15_dp"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:paddingTop="10dp"></EditText>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_addretailercontact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="?attr/cardbackground"
                        android:layout_marginTop="@dimen/common_5_dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/common_10_dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/editTextContatNo1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:maxLength="10"
                                android:digits="0123456789"
                                android:hint="Contact Number"
                                android:inputType="number"
                                android:textSize="@dimen/common_15_dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:paddingTop="10dp"></EditText>

                            <EditText
                                android:id="@+id/editTextContatMail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:textSize="@dimen/common_15_dp"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"                                android:hint="Email Id"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:inputType="textEmailAddress"
                                android:paddingTop="10dp"></EditText>

                            <EditText
                                android:id="@+id/editTextContatVatINId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_10_dp"
                                android:hint="@string/GSTIN"
                                android:textSize="@dimen/common_15_dp"
                                android:inputType="textEmailAddress"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@null"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="@color/gray"
                                android:maxLength="15"
                                android:paddingTop="10dp"></EditText>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_addretailerdone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_5_dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="?attr/cardbackground"
                        app:cardElevation="4dp"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/common_10_dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10_dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2"
                                    android:fontFamily="@font/work_sans"
                                    android:text="Visiting Card"
                                    android:textColor="?attr/filter_short_text_color">

                                </TextView>

                                <ImageView
                                    android:id="@+id/visiting_card_pic"
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="0.5"
                                    android:src="@drawable/img_not_found" />

                                <ImageView
                                    android:id="@+id/visiting_card_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/common_30_dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:src="@drawable/cam">

                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10_dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2"
                                    android:fontFamily="@font/work_sans"
                                    android:text="Inshop Display"
                                    android:textColor="?attr/filter_short_text_color">

                                </TextView>

                                <ImageView
                                    android:id="@+id/inshop_display_pic"
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="0.5"
                                    android:src="@drawable/img_not_found" />


                                <ImageView
                                    android:id="@+id/inshop_display_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/common_30_dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:src="@drawable/cam">

                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10_dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="2"
                                    android:fontFamily="@font/work_sans"
                                    android:text="Sign Board"
                                    android:textColor="?attr/filter_short_text_color">


                                </TextView>

                                <ImageView
                                    android:id="@+id/signboard_pic"
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="0.5"
                                    android:src="@drawable/img_not_found" />

                                <ImageView
                                    android:id="@+id/signboard_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/common_30_dp"
                                    android:layout_weight="0.5"
                                    android:src="@drawable/cam">

                                </ImageView>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/next1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/work_sans"
                            android:text="Swipe to next"
                            android:textColor="?attr/swipe_nextTv"
                            android:textSize="16sp"></TextView>

                        <ImageView
                            android:id="@+id/nextimg2new"
                            android:layout_width="@dimen/common_20_dp"
                            android:layout_height="@dimen/common_20_dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/common_5_dp"
                            android:layout_marginRight="@dimen/common_10_dp"
                            android:src="@drawable/viewordermenu">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonAddRetailerSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/txt_done"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/work_sans"
                            android:text="Swipe to next"
                            android:textColor="?attr/swipe_nextTv"
                            android:textSize="14sp"></TextView>

                        <ImageView
                            android:id="@+id/nextimg1"
                            android:layout_width="@dimen/common_20_dp"
                            android:layout_height="@dimen/common_20_dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/common_5_dp"
                            android:layout_marginRight="@dimen/common_10_dp"
                            android:src="@drawable/viewordermenu">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/next3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/work_sans"
                            android:text="Swipe to next"
                            android:textColor="?attr/swipe_nextTv"
                            android:textSize="16sp"></TextView>

                        <ImageView
                            android:id="@+id/nextimg3"
                            android:layout_width="@dimen/common_20_dp"
                            android:layout_height="@dimen/common_20_dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/common_5_dp"
                            android:layout_marginRight="@dimen/common_10_dp"
                            android:src="@drawable/viewordermenu">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonAddRetailerSave1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/work_sans"
                            android:text="Done"
                            android:textColor="?attr/swipe_nextTv"
                            android:textSize="16sp"></TextView>

                        <ImageView
                            android:id="@+id/nextimg4"
                            android:layout_width="@dimen/common_20_dp"
                            android:layout_height="@dimen/common_20_dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/common_5_dp"
                            android:layout_marginRight="@dimen/common_10_dp"
                            android:src="@drawable/viewordermenu">

                        </ImageView>

                    </LinearLayout>


                    <!--       <EditText -->
                    <!--         android:id="@+id/editTextContactP1" -->
                    <!--         android:layout_width="250dp" -->
                    <!--         android:layout_height="wrap_content" -->
                    <!--         android:layout_gravity="center" -->
                    <!--         android:hint="Contact Person" -->
                    <!--         android:inputType="textPersonName" -->
                    <!--         android:paddingTop="10dp" > -->
                    <!--     </EditText> -->


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/buttonAddRetailerCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                    </ImageView>

                </LinearLayout>


            </ScrollView>


        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>