<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.UpdateStockScreen2"
    tools:showIn="@layout/activity_update_stock_screen2">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/st_filter_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_header_image"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                >

                <ImageView
                    android:id="@+id/sort_by"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/sortby_ordertype"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/sort_by"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                >


                <LinearLayout
                    android:id="@+id/filter_lout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/fitericon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/filterordertype_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/Filter"
                        android:textAlignment="center"
                        android:textColor="?attr/filter_short_text_color"
                        android:layout_marginLeft="7dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/sortIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/sortby_ordertype"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/sort_by"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="?attr/filter_short_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/updates_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/filter_layout"
                android:layout_above="@+id/ustock_next_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/ustock_next_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/common_20_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/work_sans"
                    android:text="@string/Next"
                    android:textColor="?attr/visit_schedule_historytext"
                    android:textSize="18sp"></TextView>

                <ImageView
                    android:id="@+id/nextimg"
                    android:layout_width="@dimen/common_20_dp"
                    android:layout_height="@dimen/common_20_dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/common_5_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:src="@drawable/viewordermenu">

                </ImageView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>





</RelativeLayout>