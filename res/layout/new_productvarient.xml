<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10_dp"
        card_view:cardBackgroundColor="?attr/cardbackground"
        card_view:cardCornerRadius="@dimen/common_10_dp"
        card_view:cardElevation="@dimen/common_4_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/common_5_dp"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/Productnamerpmrp"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="20dp"
                    android:fontFamily="@font/work_sans"
                    android:textStyle="bold"
                    android:textColor="?attr/filter_short_text_color"
                    android:textSize="14dp">

                </TextView>
                <ImageView
                    android:id="@+id/show_update_stock"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="@dimen/common_20_dp"
                    android:src="?attr/show_i_logo"
                    >

                </ImageView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mrpvnew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PAMRP"
                        android:textColor="?attr/hint_text_color"
                        android:textSize="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/productquantityp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/squareedittext"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/filter_short_text_color"
                        android:gravity="center"
                        android:hint="@string/ENTER_QUANTITY"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="9"
                        android:padding="5dp"
                        android:layout_marginTop="@dimen/common_3_dp"
                        android:layout_marginRight="@dimen/common_10_dp"
                        android:text=""
                        android:textSize="12dp"
                        />

                    <TextView
                        android:id="@+id/scheme"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_25_dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/common_5_dp"
                        android:textSize="12dp" />
                    <!--android:background="@drawable/scheme_nbtn"-->
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/totalpricep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="@string/Price"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp">

            </TextView>

            <EditText
                android:id="@+id/edit_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_shadow"
                android:ems="10"
                android:hint="@string/Comments"
                android:textColor="?attr/filter_short_text_color"
                android:textColorHint="?attr/hint_text_color"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text=""
                android:textSize="15dp" />


            <TextView
                android:id="@+id/pidp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.36"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text=""
                android:textSize="17dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mrpv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text=""
                android:textSize="17dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rpv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.40"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text=""
                android:textSize="17dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:visibility="gone" />

            <EditText
                android:id="@+id/edit_detail1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:hint="@string/Detail"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:text=""
                android:textSize="15dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/v3layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <EditText
                    android:id="@+id/edit_detail2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:hint="@string/Detail2"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text=""
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edit_detail3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:hint="@string/Detail3"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text=""
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v4layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v3layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <EditText
                    android:id="@+id/edit_detail4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:hint="@string/Detail4"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:text=""
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edit_detail5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:hint="@string/Details5"
                    android:inputType="text"
                    android:text=""
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>