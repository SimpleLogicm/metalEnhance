<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/cardbackground"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c_name"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="abc"
                    android:layout_marginLeft="3dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/work_sans"
                    android:textColor="?attr/meetingshead">

                </TextView>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:fontFamily="@font/work_sans"
                    android:textColor="?attr/filter_short_text_color">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c_address"
                    android:layout_width="0dp"
                    android:drawableLeft="@drawable/ic_location_blue"
                    android:layout_height="wrap_content"
                    android:drawableTint="?attr/New_orderoption_menueoptions_textcolor"
                    android:layout_weight="1.5"
                    android:textColor="?attr/hint_text_color"
                    android:fontFamily="@font/work_sans"
                    >

                </TextView>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/work_sans"
                    android:textColor="?attr/meetingshead">

                </TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/common_5_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.933"
                android:weightSum="2"
                android:visibility="gone"
                android:id="@+id/locationmap"
                android:layout_height="@dimen/common_20_dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/locationimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/new_location"
                    android:layout_height="@dimen/common_20_dp">

                </ImageView>

                <TextView
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:text="@string/Km"
                    android:layout_height="@dimen/common_20_dp">

                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:text="|"
                android:visibility="gone"
                android:gravity="center"
                android:layout_height="@dimen/common_20_dp"
                android:layout_weight="0.1">

            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.933"
                android:weightSum="2"
                android:id="@+id/call"
                android:visibility="gone"
                android:layout_height="@dimen/common_20_dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/callimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/telephone_cust_prof"
                    android:layout_height="@dimen/common_20_dp">

                </ImageView>

                <TextView
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Call"
                    android:textColor="?attr/hint_text_color"
                    android:layout_height="@dimen/common_20_dp">

                </TextView>
            </LinearLayout>



            <TextView
                android:layout_width="0dp"
                android:text="|"
                android:visibility="gone"
                android:gravity="center"
                android:layout_height="@dimen/common_20_dp"
                android:layout_weight="0.1">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.933"
                android:gravity="center"
                android:id="@+id/reschedule"
                android:text="@string/Reschedule"
                android:textColor="?attr/hint_text_color"
                android:layout_height="@dimen/common_20_dp">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>