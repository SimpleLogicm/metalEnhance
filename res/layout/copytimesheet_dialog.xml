<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_20_dp">


        <TextView
            android:id="@+id/copy_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Please Select Date   "
            android:textColor="@color/black"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginLeft="@dimen/common_5_dp"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/radio_fromtimesheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy from existing timesheet"
            android:textSize="@dimen/common_15_dp"
            android:onClick="onRadioButtonClicked"
             />



        <RadioButton
            android:id="@+id/radio_fromfavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10_dp"
            android:textSize="@dimen/common_15_dp"
            android:text="Copy from favourite"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_copyok"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/OK_Button_label"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:background="@drawable/metal_button"/>

</LinearLayout>