<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/Activity_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Promotional_meeting_add"
    tools:showIn="@layout/activity_promotional_meeting_add">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theameh"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:padding="10dp"
                   app:cardBackgroundColor="?attr/cardbackground"
                   app:cardCornerRadius="20dp"
                   app:cardElevation="5dp">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="@dimen/common_10_dp"
                       android:orientation="vertical">

                       <EditText
                           android:id="@+id/et_topic"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="15dp"
                           android:textColorHint="?attr/hint_text_color"
                           android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                           android:backgroundTint="#c3c3c3"
                           android:hint="Topic">


                       </EditText>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="2"
                           android:orientation="horizontal">

                           <EditText
                               android:id="@+id/et_date"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="5dp"
                               android:layout_weight="1"
                               android:clickable="false"
                               android:cursorVisible="false"
                               android:textColorHint="?attr/hint_text_color"
                               android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                               android:backgroundTint="#c3c3c3"
                               android:drawableTint="?attr/filter_short_text_color"

                               android:drawableLeft="@drawable/ic_date_range_black_24dp"
                               android:enabled="true"
                               android:focusable="false"
                               android:hint="Date"
                               android:textSize="16sp">


                           </EditText>

                           <EditText
                               android:id="@+id/et_time"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="5dp"
                               android:layout_weight="1"
                               android:clickable="false"
                               android:cursorVisible="false"
                               android:textColorHint="?attr/hint_text_color"
                               android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                               android:backgroundTint="#c3c3c3"
                               android:drawableLeft="@drawable/ic_access_time_black_24dp"
                               android:enabled="true"
                               android:focusable="false"
                               android:hint="Time"
                               android:textSize="16sp">


                           </EditText>

                       </LinearLayout>

                       <LinearLayout
                           android:id="@+id/parent_linear_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <androidx.recyclerview.widget.RecyclerView
                               android:id="@+id/m_recycler"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="5dp" />
                       </LinearLayout>


                       <AutoCompleteTextView
                           android:id="@+id/et_location"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:hint="Location"
                           android:textColorHint="?attr/hint_text_color"
                           android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                           android:backgroundTint="#c3c3c3"
                           android:textCursorDrawable="@drawable/color_cursor"></AutoCompleteTextView>

                       <Spinner
                           android:id="@+id/type_spin"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="10dp"
                           android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                           style="@style/mySpinnerItemStyle"
                           android:entries="@array/Meeting_type">

                       </Spinner>


                   </LinearLayout>


               </androidx.cardview.widget.CardView>

               <Button
                   android:id="@+id/btn_save"
                   android:layout_marginBottom="@dimen/common_10_dp"
                   android:layout_marginTop="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/btnstyle"
                   android:text="@string/Save"
                   android:layout_gravity="center_horizontal"
                   android:textColor="@color/white">

               </Button>

           </LinearLayout>
       </ScrollView>



    </LinearLayout>


</RelativeLayout>