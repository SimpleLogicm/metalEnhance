<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_50_dp">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/common_10_dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/day_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:layout_below="@+id/tab_lout"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calendar"
                        android:gravity="center"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:textSize="@dimen/common_15_dp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/common_5_dp"
                        />

                    <com.skyhope.eventcalenderlibrary.CalenderEvent
                        android:id="@+id/calender_event"
                        android:layout_width="match_parent"
                        app:selector_color="#9BC8FF"
                        android:layout_marginTop="22dp"
                        android:visibility="gone"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/month"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="#EBEBEB"
                            android:gravity="center"
                            android:textColor="#111111"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.view.calender.horizontal.umar.horizontalcalendarview.HorizontalCalendarView
                            android:id="@+id/horizontalcalendarview"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/month"
                            android:layout_height="70dp">

                        </com.view.calender.horizontal.umar.horizontalcalendarview.HorizontalCalendarView>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/exOneYearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/exOneMonthText"
                    android:textColor="?attr/filter_short_text_color"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/exOneMonthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MONTH"
                    android:textColor="?attr/filter_short_text_color"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/calendar_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?cardbackground"
                    app:cardCornerRadius="@dimen/common_10_dp"
                    android:layout_below="@+id/exOneMonthText"
                    app:cardPreventCornerOverlap="true"
                    app:cardMaxElevation="@dimen/common_10_dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/week"
                            layout="@layout/calendar_day_legend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />

                        <com.kizitonwose.calendarview.CalendarView
                            android:id="@+id/exOneCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/week"
                            android:background="#0062A9"
                            app:cv_dayViewResource="@layout/example_1_calendar_day"
                            app:cv_inDateStyle="allMonths"
                            app:cv_orientation="horizontal"
                            app:cv_outDateStyle="endOfRow"
                            app:cv_scrollMode="paged"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <CheckBox
                    android:id="@+id/weekModeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calendar_card"
                    android:layout_centerHorizontal="true"
                    android:buttonTint="@color/example_1_white"
                    android:padding="2dp"
                    android:text="Week mode"
                    android:visibility="gone"
                    android:textColor="?attr/filter_short_text_color"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/weekModeCheckBox">
                    <LinearLayout android:id="@+id/linearLayoutForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <Button android:id="@+id/btnDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/scrollView1"
                    android:text="btnDisplay" />

                <TextView
                    android:id="@+id/btn_addtask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawableTint="#3084D0"
                    android:layout_below="@+id/scrollView1"
                    android:layout_alignParentRight="true"
                    android:textColor="?attr/visit_schedule_historytext"
                    android:text="  Add Task"/>

                <Button android:id="@+id/btn_copytimesheet"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/btn_addtask"
                    android:background="@drawable/metal_button"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:layout_marginLeft="@dimen/common_20_dp"
                    android:layout_marginTop="@dimen/common_20_dp"
                    android:textAllCaps="false"
                    android:text="Copy Timesheet" />

                <Button android:id="@+id/btn_submit"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/btn_addtask"
                    android:background="@drawable/metal_button"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/common_20_dp"
                    android:layout_marginRight="@dimen/common_20_dp"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:text="@string/Submit" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>