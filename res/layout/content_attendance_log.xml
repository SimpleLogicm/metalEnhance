<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.AttendanceLog"
    tools:showIn="@layout/activity_attendance_log">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">


            <androidx.cardview.widget.CardView
                android:id="@+id/attendance_card_view1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >

                    <Button
                        android:id="@+id/att_mapat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="?attr/filter_short_text_color"
                        android:background="?attr/cardbackground"
                        android:text="Mark Attendance"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Button
                        android:id="@+id/att_log"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Attendance_Log"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:background="#007AD0"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".008"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:background="@color/black_overlay"/>

                    <Button
                        android:id="@+id/att_shftro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/filter_short_text_color"
                        android:background="?attr/cardbackground"
                        android:textSize="14dp"
                        android:layout_marginRight="@dimen/common_5_dp"
                        android:text="@string/Shift_Roaster"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/atth_card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="?attr/cardbackground"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/alog_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"

                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/at_tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.7"
                        android:gravity="left"
                        android:textSize="@dimen/common_15_dp"
                        android:hint="@string/Select_Date"
                        android:textColorHint="?attr/hint_text_color"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/hint_text_color" />


                    <ImageView
                        android:id="@+id/Img_date"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:tint="?attr/filter_short_text_color"
                        android:src="@drawable/calendar_icon" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/atth_card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/atth_card_view1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="?attr/cardbackground"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="5">

                        <TextView
                            android:id="@+id/atth_head1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/Date_label"
                            android:textSize="@dimen/common_15_dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/filter_short_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/atth_head2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/Shift"
                            android:textSize="@dimen/common_15_dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/filter_short_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/atth_head3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/IN"
                            android:textSize="@dimen/common_15_dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/filter_short_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/atth_head4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/OUT"
                            android:textSize="@dimen/common_15_dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/filter_short_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/atth_head5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/Hoursat"
                            android:textSize="@dimen/common_15_dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/filter_short_text_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c3c3c3"></View>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.7"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="?attr/cardbackground"
                android:visibility="gone"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:textColor="?attr/hint_text_color"
                        android:text="@string/Total"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="00"
                        android:textColor="?attr/hint_text_color"

                        android:textSize="16sp">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>