<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.msimplelogic.activities.Customer_info_main"
    tools:showIn="@layout/activity_customer_info_main">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/filter_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@id/filter_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/filterordertype_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/Filter"
                        android:textAlignment="center"
                        android:textColor="?attr/filter_short_text_color"
                        android:layout_marginLeft="7dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    card_view:cardBackgroundColor="?attr/cardbackground"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:id="@+id/rel"
                            android:layout_margin="@dimen/common_10_dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:visibility="gone"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_toEndOf="@+id/autoCompleteTextView1"
                                android:layout_toRightOf="@+id/autoCompleteTextView1"
                                android:background="@drawable/filter_icon" />

                            <AutoCompleteTextView
                                android:id="@+id/autoCompleteTextView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:completionThreshold="1"
                                android:drawableRight="@drawable/search_icon"
                                android:ems="10"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:hint="@string/Search_Customer"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:scrollbars="none"
                                android:singleLine="true"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:textSize="15dp">

                                <requestFocus />
                            </AutoCompleteTextView>

                        </RelativeLayout>



                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/c_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/card_view"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginRight="@dimen/common_10_dp" />


            </LinearLayout>


            <ImageView
                android:id="@+id/cash_Reportmenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/common_10_dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/menu_icon"
                android:visibility="gone"
                android:backgroundTint="#075B97"/>

        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>
