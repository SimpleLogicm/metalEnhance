<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.msimplelogic.activities.SpeedViewActivity"
    tools:showIn="@layout/activity_outstanding_main">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_above="@+id/totalcard"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="?attr/cardbackground"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/common_10_dp"
                    android:layout_margin="@dimen/common_15_dp"
                    app:cardElevation="@dimen/common_4_dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/layout"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/work_sans"
                                android:text="@string/Order_Date"
                                android:textColor="?attr/filter_short_text_color" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"

                                android:fontFamily="@font/work_sans"
                                android:text="Order Amount"
                                android:textColor="?attr/filter_short_text_color" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/work_sans"
                                android:text="@string/Pending_Amount"
                                android:textColor="?attr/filter_short_text_color" />
                        </LinearLayout>

                        <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                            android:id="@+id/outstanding_overdue_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_5_dp"
                            android:layout_below="@+id/layout"
                            android:layout_marginTop="0dp"
                            app:shimmer_demo_angle="0"
                            app:shimmer_demo_child_count="10"
                            app:shimmer_demo_grid_child_count="2"
                            app:shimmer_demo_layout_manager_type="linear_vertical" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>






                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/outstanding_overdue_list1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout"
                    android:visibility="gone" />


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/totalcard"
                app:cardBackgroundColor="?attr/cardbackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:layout_above="@+id/btnll"
                android:layout_margin="@dimen/common_15_dp"
                app:cardElevation="@dimen/common_4_dp"
                app:cardCornerRadius="@dimen/common_10_dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btn_pay"
                    android:layout_centerInParent="true"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:fontFamily="@font/work_sans"
                    android:padding="@dimen/common_5_dp"
                    android:text="@string/Total"
                    android:textColor="?attr/filter_short_text_color"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/btn_pay"
                    android:fontFamily="@font/work_sans"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:padding="@dimen/common_5_dp"
                    android:layout_gravity="right"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="?attr/filter_short_text_color"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:id="@+id/btnll"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="120dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btnstyle"
                    android:text="@string/Pay"

                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
                <Button
                    android:id="@+id/btn_history"
                    android:layout_width="120dp"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btnstyle"
                    android:text="@string/Pay_History"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>