<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="90dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/swipe"
        android:src="@drawable/timeliner"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="@dimen/common_30_dp"
        android:layout_marginLeft="@dimen/common_30_dp"
        >

    </ImageView>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/swipe"
        android:id="@+id/signature_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:id="@+id/linearLayout245"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/signuptext"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="@dimen/common_5_dp"
                android:text="@string/Distributor">
            </TextView>

            <TextView
                android:id="@+id/distributorname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/work_sans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                style="@style/signuptext"
                >

            </TextView>

            <Spinner
                android:id="@+id/order_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="20dp">

            </Spinner>

            <EditText
                android:id="@+id/order_detail1"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="45dp"
                android:fontFamily="@font/work_sans"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:hint="@string/Expected_Delivery_Date"
                android:imeOptions="actionDone"
                android:singleLine="true">

            </EditText>



            <EditText
                android:id="@+id/yourName"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/work_sans"
                android:hint="@string/Customer_Name"
                android:imeOptions="actionDone"
                android:singleLine="true">



            </EditText>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>



</LinearLayout>