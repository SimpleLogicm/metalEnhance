<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.SettingsActivity"
    tools:showIn="@layout/setting_activity_main">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="?attr/metal_headder"
            android:scaleType="fitXY"
            android:layout_height="70dp">
        </ImageView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            android:background="?attr/fulllayoutbg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:elevation="4dp">
                <Switch
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text="Dark Mode"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/seperator"/>
                <TextView
                    style="@style/Text.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:text="Theme"/>
                <com.msimplelogic.helper.ThemeView
                    android:id="@+id/theme_selected"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick"/>

            </LinearLayout></androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/common_10_dp"
            android:id="@+id/themerecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/fulllayoutbg"/>
    </LinearLayout>
</LinearLayout>