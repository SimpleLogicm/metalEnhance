<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.msimplelogic.activities.kotlinFiles.Visit_Schedule"
    tools:showIn="@layout/activity_visitlogsubmit">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/fulllayoutbg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="?attr/metal_headder">

        </ImageView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_10_dp"
            app:cardBackgroundColor="?attr/cardbackground"
            app:cardCornerRadius="@dimen/common_10_dp"
            app:cardElevation="@dimen/common_4_dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/common_10_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_50_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="@dimen/common_50_dp"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="@dimen/common_0_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:text="Visit Type"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="@dimen/common_0_dp"
                            android:layout_weight="0.1"
                            android:text="*"
                            android:layout_gravity="center"
                            android:textColor="@drawable/red_color"
                            android:layout_height="wrap_content">

                        </TextView>



                    </LinearLayout>



                    <Spinner
                        android:id="@+id/visittypespin"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3">

                    </Spinner>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="@dimen/common_50_dp"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="@dimen/common_0_dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:text="@string/Description"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="@dimen/common_0_dp"
                            android:layout_weight="0.1"
                            android:text="*"
                            android:textColor="@drawable/red_color"
                            android:layout_height="wrap_content">

                        </TextView>


                    </LinearLayout>



                    <EditText
                        android:id="@+id/editText_description"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:background="@drawable/card_border_black"
                        android:gravity="left"
                        android:hint="@string/Description"
                        android:padding="2dp"
                        android:textColorHint="?attr/hint_text_color"
                        android:textSize="@dimen/common_15_dp">

                    </EditText>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:text="Expected Check_out time"
                        android:textColor="?attr/visit_schedule_historytext"
                        android:textSize="18sp"
                        android:textStyle="bold">

                    </TextView>

                    <Spinner
                        android:id="@+id/Logoutspin"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3">

                    </Spinner>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_1_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:background="?attr/hint_text_color">

                </TextView>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_50_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:text="Upload Photo"
                        android:textColor="?attr/visit_schedule_historytext"
                        android:textSize="18sp"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_weight="0.1"
                        android:text="*"
                        android:layout_gravity="center"
                        android:textColor="@drawable/red_color"
                        android:layout_height="wrap_content">

                    </TextView>


                    <LinearLayout
                        android:id="@+id/uploadephoto"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/common_0_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:src="@drawable/uploadephoto">

                        </ImageView>

                        <TextView

                            android:layout_width="@dimen/common_0_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.9"
                            android:text="Upload Photo"
                            android:textColor="#E0E0E0"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>



                    </LinearLayout>


                </LinearLayout>


                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/captureimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/common_10_dp">

                    <ImageView
                        android:id="@+id/img_show"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"></ImageView>

                    <ImageView
                        android:id="@+id/crossimg"
                        android:layout_width="23dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:src="@drawable/cross" />
                </FrameLayout>



                <Button
                    android:id="@+id/btnsubmit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnstyle"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:text="@string/Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>