<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.msimplelogic.activities.SpeedViewActivity"
    tools:showIn="@layout/speed_activity">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_20_dp"
            android:orientation="vertical">

           <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                gauge:cardCornerRadius="@dimen/common_10_dp"
                gauge:cardElevation="@dimen/common_4_dp"
               gauge:cardBackgroundColor="?attr/cardbackground"
                android:padding="@dimen/common_15_dp"
                android:layout_height="wrap_content">

                <com.github.anastr.speedviewlib.SpeedView
                    android:id="@+id/speedView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardbackground"
                    gauge:sv_unit=" Days"
                    android:padding="@dimen/common_5_dp"
                    gauge:sv_speedTextColor="?attr/filter_short_text_color"
                    gauge:sv_unitTextColor="?attr/filter_short_text_color"
                    gauge:sv_textColor="?attr/filter_short_text_color"
                    android:layout_margin="@dimen/common_20_dp"
                    android:layout_marginTop="10dp"/>

                <de.nitri.gauge.Gauge
                    android:id="@+id/gauge1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    gauge:sv_textColor="?attr/filter_short_text_color"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.75"
                    gauge:labelTextSize="42"
                    gauge:maxValue="100"
                    gauge:minValue="0"
                    android:visibility="gone"
                    gauge:totalNicks="20"
                    gauge:valuePerNick="10"
                    gauge:upperText="Qty"
                    gauge:lowerText="fff" />

            </androidx.cardview.widget.CardView>



            <Button
                android:id="@+id/clearamtoutstanding_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/btnstyle"
                android:textAllCaps="false"
                android:text="@string/Clear" />


        </LinearLayout>

    </ScrollView>

    </LinearLayout>
</LinearLayout>