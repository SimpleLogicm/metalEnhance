<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Cust_feed_new2"
    tools:showIn="@layout/activity_cust_feed_new2">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/common_10_dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_25_dp"
                                android:elevation="@dimen/common_4_dp"
                                app:cardBackgroundColor="?attr/cardbackground"
                                android:padding="@dimen/common_10_dp"
                                app:cardCornerRadius="@dimen/common_10_dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:id="@+id/linearlayout_shopname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginTop="@dimen/common_50_dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_shopname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:fontFamily="@font/work_sans"
                                        android:text="Asha Electronics"
                                        android:textColor="?attr/filter_short_text_color"
                                        android:textSize="15sp"
                                        android:textStyle="bold">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tv_shopadd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:drawableLeft="@drawable/ic_location_blue"
                                        android:fontFamily="@font/work_sans"
                                        android:gravity="center"
                                        android:textColor="?attr/hint_text_color"
                                        android:text="Near Mera Lodge MG Road Raipur"
                                        android:textSize="12sp">

                                    </TextView>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/CirculerImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/user"></de.hdodenhof.circleimageview.CircleImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card1bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="?attr/cardbackground"
                            android:layout_marginTop="@dimen/common_10_dp"
                            android:elevation="@dimen/common_4_dp"
                            android:padding="@dimen/common_10_dp"
                            app:cardCornerRadius="@dimen/common_10_dp"
                            app:cardUseCompatPadding="true"
                            >

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:id="@+id/rv"
                                android:padding="@dimen/common_10_dp"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/signature_card4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/As_Technician"
                            style="@style/signuptext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/As_Technician"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/signature_cardn_tech"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_below="@+id/As_Technician"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="14dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/save_sign_techni"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/work_sans"
                                        android:gravity="right"
                                        android:text="@string/Save"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/black"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/clear_tech"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="@dimen/common_10_dp"
                                        android:fontFamily="@font/work_sans"
                                        android:gravity="right"
                                        android:text="@string/Clear"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />
                                </LinearLayout>


                                <com.github.gcacace.signaturepad.views.SignaturePad
                                    android:id="@+id/signature_pad_tech"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    app:penColor="@android:color/black" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/black">

                                </TextView>

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="5dp"
                                    android:text="Sign above the line..."
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_Image1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/signature_cardn_tech"
                            android:visibility="visible"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <FrameLayout
                                    android:id="@+id/imgframe"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/common_10_dp">

                                    <!--<ImageView-->
                                    <!--android:id="@+id/crossimg"-->
                                    <!--android:layout_width="23dp"-->
                                    <!--android:layout_height="20dp"-->
                                    <!--android:src="@drawable/cross"-->
                                    <!--android:layout_alignParentEnd="true"-->
                                    <!--android:layout_alignParentRight="true">-->
                                    <!--</ImageView>-->

                                    <ImageView
                                        android:id="@+id/img_show1"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:scaleType="fitCenter"
                                        android:visibility="gone"></ImageView>

                                    <ImageView
                                        android:id="@+id/crossimg1"
                                        android:layout_width="33dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:src="@drawable/blackcrossimg"
                                        android:visibility="gone" />
                                </FrameLayout>

                                <Button
                                    android:id="@+id/btn_takephoto1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="@dimen/common_10_dp"
                                    android:layout_marginBottom="@dimen/common_10_dp"
                                    android:background="@drawable/btnstyle"
                                    android:padding="@dimen/common_10_dp"
                                    android:text="@string/Take_Photo"
                                    android:textColor="@color/white">

                                </Button>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/signature_card5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/As_dealer"
                            style="@style/signuptext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Dealer"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="visible"></TextView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/signature_cardn_dealer"
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:layout_below="@+id/As_dealer"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="14dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="right"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/save_sign_dealer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/work_sans"
                                        android:gravity="right"
                                        android:text="@string/Save"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/black"
                                        android:textSize="16dp" />


                                    <TextView
                                        android:id="@+id/clear_dealer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="@dimen/common_10_dp"
                                        android:fontFamily="@font/work_sans"
                                        android:gravity="right"
                                        android:text="@string/Clear"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />
                                </LinearLayout>


                                <com.github.gcacace.signaturepad.views.SignaturePad
                                    android:id="@+id/signature_pad_dealer"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="10dp"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    app:penColor="@android:color/black" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/black">

                                </TextView>

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="5dp"
                                    android:text="Sign above the line..."
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/black_overlay"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_Image_dealer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/signature_cardn_dealer"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:id="@+id/imgframe_dealer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/common_10_dp"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/img_show_dealer"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:scaleType="fitCenter"></ImageView>

                                    <ImageView
                                        android:id="@+id/crossimg_dealer"
                                        android:layout_width="33dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="right"
                                        android:src="@drawable/blackcrossimg" />
                                </FrameLayout>

                                <Button
                                    android:id="@+id/btn_takephoto_dealer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="@dimen/common_10_dp"
                                    android:layout_marginTop="@dimen/common_10_dp"
                                    android:layout_marginBottom="@dimen/common_10_dp"
                                    android:background="@drawable/btnstyle"
                                    android:padding="@dimen/common_10_dp"
                                    android:text="@string/Take_Photo"
                                    android:textColor="@color/white"
                                    android:visibility="visible">

                                </Button>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/signature_card6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/As_dealer_last"
                            style="@style/signuptext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Dealer"
                            android:textSize="14sp"
                            android:textStyle="bold">

                        </TextView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/dealer_last_card"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@+id/As_dealer_last"
                            android:layout_marginTop="@dimen/common_5_dp"
                            android:padding="@dimen/common_10_dp"
                            app:cardCornerRadius="@dimen/common_10_dp"
                            app:cardElevation="4dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_5_dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/dealer_sign_image"
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp">

                                </ImageView>

                                <ImageView
                                    android:id="@+id/dealer_photo_image"
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="@dimen/common_10_dp">

                                </ImageView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/As_Technician_last"
                            style="@style/signuptext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dealer_last_card"
                            android:layout_marginTop="@dimen/common_5_dp"
                            android:gravity="center"
                            android:text="@string/As_Technician"
                            android:textSize="14sp"
                            android:textStyle="bold">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/Tech_last_card"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@+id/As_Technician_last"
                            android:layout_marginTop="@dimen/common_5_dp"
                            android:padding="@dimen/common_10_dp"
                            app:cardCornerRadius="@dimen/common_10_dp"
                            app:cardElevation="4dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/common_5_dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/Tech_sign_image"
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp">

                                </ImageView>

                                <ImageView
                                    android:id="@+id/Tech_photo_image"
                                    android:layout_width="@dimen/common_0_dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="@dimen/common_10_dp">

                                </ImageView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btn_addsignpic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click to Add Signature and Picture >>"
                        android:textColor="?attr/visit_schedule_historytext"
                        android:textSize="15dp"
                        android:gravity="right"
                        android:fontFamily="@font/work_sans"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:layout_gravity="right"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>



            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:text="@string/Submit"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@drawable/metal_button"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>