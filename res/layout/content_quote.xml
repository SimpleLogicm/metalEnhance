<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerPreview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_50_dp"
   >

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

        <LinearLayout
            android:id="@+id/lout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:orientation="vertical"

            >
            <!--        <com.msimplelogic.swipelistview.SwipeListView-->
            <!--            android:id="@+id/example_lv_list"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->

            <!--            swipe:swipeCloseAllItemsWhenMoveList="true"-->
            <!--            swipe:swipeMode="none"-->
            <!--            android:divider="@color/gray"-->
            <!--            />-->

            <ListView
                android:id="@+id/example_lv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:divider="@color/gray"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/re_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lout"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="?attr/cardbackground"
            android:elevation="4dp"
            android:layout_marginTop="@dimen/home_text_size"
            card_view:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/main_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/common_15_dp"
                    android:text="@string/Total"
                    android:textColor="?attr/filter_short_text_color"

                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txttotalPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="?attr/filter_short_text_color"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/common_15_dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/re_card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/re_card_view"
            android:layout_gravity="center"
            android:elevation="4dp"
            card_view:cardBackgroundColor="?cardbackground"
            android:layout_marginTop="@dimen/home_text_size"
            card_view:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/main_tvs"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_30_dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/common_15_dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/Expected_Amount"
                    android:textColor="?attr/filter_short_text_color"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/expected_amount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="?attr/filter_short_text_color"
                    android:textSize="15sp"
                    android:cursorVisible="true"
                    android:backgroundTint="@color/gray"
                    android:textCursorDrawable="@null"
                    android:layout_marginRight="@dimen/common_15_dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:layout_marginLeft="@dimen/common_10_dp"
            android:layout_marginRight="@dimen/common_10_dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/common_10_dp"
            android:layout_below="@+id/re_card_view1">

            <Button
                android:id="@+id/buttonPreviewHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/common_15_dp"
                android:background="@drawable/metal_button"
                android:text="@string/Cancel"/>

            <Button
                android:id="@+id/btn_subapprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textSize="@dimen/common_15_dp"
                android:textColor="#ffffff"
                android:background="@drawable/metal_button"
                android:text="@string/Submit"/>

            <Button
                android:id="@+id/buttonPreviewAddMOre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/metal_button"
                android:textAllCaps="false"
                android:textSize="@dimen/common_15_dp"
                android:textColor="#ffffff"
                android:text="@string/PAdd_More"/>


        </RelativeLayout>

    </LinearLayout>





</LinearLayout>