<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ececec">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/url_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting_url"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:src="@drawable/instu_sales">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:background="@drawable/logincard"
            android:orientation="vertical">

            <TextView
                style="@style/welcometext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="@string/forgt_pass">

            </TextView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#EFEFEF"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"

                        android:src="@drawable/mailpic">

                    </ImageView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"

                    android:orientation="vertical">

                    <TextView
                        style="@style/welcometext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Email"
                        android:textSize="14sp">

                    </TextView>


                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#c3c3c3"
                        android:textCursorDrawable="@null"
                        android:fontFamily="@font/work_sans"
                        android:inputType="textPersonName"
                        android:textColor="#557390"
                        android:singleLine="true">

                    </EditText>



                </LinearLayout>




            </LinearLayout>

            <Button
                android:id="@+id/forgetpwd_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btnstyle"
                android:fontFamily="@font/work_sans"
                android:gravity="center"
                android:text="@string/Sign_In"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />





        </LinearLayout>


    </LinearLayout>




</LinearLayout>