<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msimplelogic.activities.MainActivity"
    android:orientation="vertical"
    android:id="@+id/ll">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
>

            <TextView
                android:id="@+id/txt_tasknote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:textColor="?attr/filter_short_text_color"
                />

            <ImageView
                android:id="@+id/tourplus_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_circle_outline"
                android:tint="?attr/visit_schedule_historytext"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/search_variants"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Date"
                android:drawableTint="?attr/filter_short_text_color"
                android:drawableRight="@drawable/calendar_icon"
                android:background="@drawable/task_autocumplete_back"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:textSize="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="7dp"
                android:gravity="center|left"
                android:textCursorDrawable="@color/sky"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tourplus_btn"/>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/bankcardId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/common_10_dp"
                card_view:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/search_variants"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/tour_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:shimmer_demo_child_count="10"
                        android:background="?attr/cardbackground"
                        app:shimmer_demo_grid_child_count="2"
                        app:shimmer_demo_layout_manager_type="linear_vertical"
                        android:layout_below="@+id/layout"
                        app:shimmer_demo_angle="0"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="gone"
                android:background="@drawable/btnstyle"
                android:layout_centerHorizontal="true"
                android:text="@string/Clear"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/common_10_dp"
                android:layout_alignParentBottom="true">

            </Button>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>