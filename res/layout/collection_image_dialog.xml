<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/Collection_zoom_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:src="@drawable/metal_m"
        android:layout_above="@+id/sdfsadsa" />

    <LinearLayout
        android:id="@+id/sdfsadsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_10_dp"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

    <Button
        android:id="@+id/collection_zoom_delete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/Delete"
        android:textAllCaps="false"
        android:background="@drawable/btnstyle"
        android:textColor="@color/white"

        />

    <Button
        android:id="@+id/collection_zoom_ok"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/OK_Button_label"
        android:background="@drawable/btnstyle"
        android:textColor="@color/white"

        android:layout_marginLeft="20dp"
       />

    </LinearLayout>
</RelativeLayout>