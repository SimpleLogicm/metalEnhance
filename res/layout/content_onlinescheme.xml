<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_50_dp"
    >

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_10_dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/txttotalPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="13dp"
                android:layout_above="@+id/linearLayout3"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:visibility="invisible"
                android:id="@+id/linearLayout3">

                <Button
                    android:id="@+id/online_catalog_save"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="9dp"
                    android:text="@string/Save"
                    android:textSize="16dp"
                    android:background="#414042"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/online_catalog_Previewv"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="@string/Preview_Order"
                    android:background="#414042"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    />

                <Button
                    android:id="@+id/online_catalog_addmore"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/Add_More_Items"
                    android:background="#414042"
                    android:visibility="gone"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
