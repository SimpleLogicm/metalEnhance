<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.CompetitorAnalysis"
    tools:showIn="@layout/activity_competitor_analysis"
    >
    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/m_card_view"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="18dp"
                card_view:cardBackgroundColor="?attr/cardbackground"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="15dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:contentPadding="3dp">

                <LinearLayout
                    android:id="@+id/com_container_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="12dp"
                            android:text="@string/ProductComparison"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/new_launch"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/product_comp" />

                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/m_card_view2"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="?attr/cardbackground"
                card_view:cardElevation="15dp"
                card_view:contentPadding="3dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:elevation="18dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:id="@+id/com_container_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.20" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="12dp"
                            android:text="@string/MarketingMaterial"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/market_survey"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/marketing_material" />
                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/m_card_view3"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="?attr/cardbackground"
                card_view:cardElevation="15dp"
                card_view:contentPadding="3dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:elevation="18dp"
                card_view:cardPreventCornerOverlap="false"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:id="@+id/com_container_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.20" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="12dp"
                            android:text="@string/Ratings"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/advertisement"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ratings" />
                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>