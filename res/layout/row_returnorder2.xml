<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/common_10_dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        app:cardBackgroundColor="?attr/cardbackground"
        app:cardCornerRadius="@dimen/common_10_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_10_dp"
                android:orientation="vertical"
                android:padding="@dimen/common_5_dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/name"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:textColor="?attr/filter_short_text_color"
                    android:fontFamily="@font/work_sans">

                </TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">




                    <TextView
                        android:id="@+id/textRP"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/RP"
                        android:textAlignment="center"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/editTextRP"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="?attr/hint_text_color"
                        android:layout_marginLeft="5dp"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textMRP"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/MRP"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/editTextMRP"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="?attr/hint_text_color"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/work_sans"
                        android:text="@string/PQUANTITY"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="12sp">

                    </TextView>

                    <EditText
                        android:id="@+id/editTextQuantity1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_shadow"
                        android:inputType="number"
                        android:cursorVisible="true"
                        android:textColor="?attr/hint_text_color"
                        android:maxLength="9"
                        android:paddingLeft="@dimen/common_10_dp"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/work_sans"
                        android:text="@string/Batch_no"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="12sp">

                    </TextView>

                    <EditText
                        android:id="@+id/editTextbatchno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_shadow"
                        android:cursorVisible="true"
                        android:textColor="?attr/hint_text_color"
                        android:maxLength="9"
                        android:paddingLeft="@dimen/common_10_dp"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/work_sans"
                        android:text="@string/Refund_amount"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="12sp">

                    </TextView>

                    <EditText
                        android:id="@+id/txtPrice1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_shadow"
                        android:enabled="false"
                        android:inputType="number"
                        android:maxLength="9"
                        android:paddingLeft="@dimen/common_10_dp"
                        android:textColor="?attr/filter_short_text_color"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp">

                    </EditText>


                </LinearLayout>


                <EditText
                    android:id="@+id/return_order_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_marginBottom="@dimen/common_10_dp"
                    android:backgroundTint="#c3c3c3"
                    android:textSize="12sp"
                    android:cursorVisible="true"
                    android:textColor="?attr/hint_text_color"
                    android:hint="@string/ERemarks"
                    android:paddingLeft="@dimen/common_10_dp"
                    android:textCursorDrawable="@null">

                </EditText>


            </LinearLayout>


            <TextView
                android:id="@+id/p_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/hint_text_color"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>