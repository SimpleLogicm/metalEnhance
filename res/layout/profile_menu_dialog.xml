<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="380dp"
    android:background="#DCDCDC"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/close_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_arrow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/close_menu"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="@string/Menu"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/collect_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView61"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="@string/Collection_Statement"
            android:paddingLeft="20dp"
            android:textColor="#111111"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/close_filt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/collection_statement"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView61"
            android:layout_toEndOf="@+id/textView61" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/deposit"
        android:layout_width="match_parent"
        android:background="#c3c3c3"
        android:layout_marginTop="5dp"
        android:layout_height="1dp">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/deposit_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView611"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="@string/Deposit_Statement"
            android:textColor="#111111"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/close_filter11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/deposit_statement"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView611"
            android:layout_toEndOf="@+id/textView611" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/depositss"
        android:layout_width="match_parent"
        android:background="#c3c3c3"
        android:layout_marginTop="5dp"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/pending_trans"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView6111"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="@string/Pending_Transactions"
            android:textColor="#111111"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/close_filter1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/pending_transaction"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView6111"
            android:layout_toRightOf="@+id/textView6111" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cash_depo_h"
        android:layout_width="match_parent"
        android:background="#c3c3c3"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/deposit_trans"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView6112"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="Cash Deposit"
            android:textColor="#111111"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/close_filter2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cash_deposit"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView6112"
            android:layout_toRightOf="@+id/textView6112" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/deposits"
        android:layout_width="match_parent"
        android:background="#c3c3c3"
        android:layout_marginTop="5dp"
        android:layout_height="1dp" />


</LinearLayout>