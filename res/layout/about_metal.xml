<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="?attr/metal_bg_withupper"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.About_Metal"
    tools:showIn="@layout/about_metal_main"
    >



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="?attr/cardbackground"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/Metal_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/About_Metal"
                android:textColor="?attr/filter_short_text_color"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Metal_Header_descri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Metal_Header"
                android:padding="4dp"
                android:text="@string/Metal_Description"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Metal_Header_descri"
                android:maxLines="3"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/Simple_Logic_full_name"
                android:textColor="?attr/filter_short_text_color"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/discriptionnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:maxLines="3"
                android:padding="4dp"
                android:text="@string/Simple_Logic_address"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discriptionnew"
                android:maxLines="3"
                android:padding="4dp"
                android:text="@string/Call_us"
                android:textColor="?attr/filter_short_text_color"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/phonenext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:maxLines="3"
                android:padding="4dp"
                android:text="+91 22 6511 6620"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phonenext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonenext"
                android:maxLines="3"
                android:padding="4dp"
                android:text="+91 22 2500 6620"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/contactuslogo"
                android:layout_alignParentTop="true"
                 />

            <TextView
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="4dp"
                android:text="support@simplelogic.in"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp"
                android:layout_below="@+id/email1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="7dp" />

            <TextView
                android:id="@+id/email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLines="3"
                android:padding="4dp"
                android:text="sales@simplelogic.in"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="13dp"
                android:layout_alignBaseline="@+id/phonenext"
                android:layout_alignBottom="@+id/phonenext"
                android:layout_alignLeft="@+id/email2"
                android:layout_alignStart="@+id/email2" />

            <TextView
                android:id="@+id/webtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:autoLink="web"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:padding="4dp"
                android:text="@string/Simplelogic_web_link"
                android:textColor="?attr/filter_short_text_color"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="?attr/filter_short_text_color"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/Email_Us"
                android:layout_marginRight="29dp"
                android:layout_below="@+id/discriptionnew"
                android:layout_alignRight="@+id/email1"
                android:layout_alignEnd="@+id/email1"
                android:layout_marginEnd="29dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>