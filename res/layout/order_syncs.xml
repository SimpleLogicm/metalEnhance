<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.AllOrders_Sync"
    tools:showIn="@layout/sync_all_main">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/fulllayoutbg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="?attr/metal_headder">

        </ImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_10_dp"
                    app:cardBackgroundColor="?attr/cardbackground"
                    app:cardCornerRadius="@dimen/common_20_dp"
                    app:cardElevation="@dimen/common_5_dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/work_sans"
                            android:gravity="center"
                            android:text="@string/Last_Sync_On"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="17dp"
                            android:textStyle="bold">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_20_dp"
                            android:layout_marginRight="@dimen/common_15_dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/lastsyncon"
                                android:layout_width="@dimen/common_0_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                                android:drawableTint="?attr/filter_short_text_color"
                                android:gravity="center"
                                android:textColor="?attr/filter_short_text_color"
                                android:textSize="14sp">

                            </TextView>

                            <TextView
                                android:id="@+id/Totalsosync"
                                android:layout_width="@dimen/common_0_dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_10_dp"
                                android:layout_marginRight="@dimen/common_10_dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                                android:drawableTint="?attr/filter_short_text_color"
                                android:gravity="center"
                                android:textColor="?attr/filter_short_text_color"
                                android:textSize="14sp">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_10_dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/angry_btn2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_10_dp"
                        android:background="@drawable/btnstyle"
                        android:text="@string/Check_Updates"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/angry_btn1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_10_dp"
                        android:background="@drawable/btnstyle"
                        android:text="@string/Upload_Orders"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/angry_btn4"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_10_dp"
                        android:background="@drawable/btnstyle"
                        android:text="@string/Upload_Data"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/angry_btn3"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnstyle"
                        android:text="@string/Upload_Customers"
                        android:textColor="@color/white">

                    </Button>

                    <Button
                        android:id="@+id/clear_data"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_10_dp"
                        android:background="@drawable/btnstyle"
                        android:text="@string/Clear_Data"
                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>