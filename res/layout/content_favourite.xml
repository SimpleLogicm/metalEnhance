<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metal_bg_all"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Smart_Order"
    tools:showIn="@layout/activity_favourite">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rv_bottom"
                android:orientation="vertical">





                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/rv_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_20_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/privious"
                        android:visibility="gone"
                        android:layout_width="@dimen/common_30_dp"
                        android:layout_height="@dimen/common_20_dp"
                        android:background="@drawable/ic_arrow_back_black_24dp"
                        android:tint="@color/blue">

                    </ImageView>
                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.98">

                    </TextView>
                    <ImageView
                        android:id="@+id/next"
                        android:visibility="gone"
                        android:layout_width="@dimen/common_30_dp"
                        android:layout_height="@dimen/common_20_dp"
                        android:background="@drawable/ic_arrow_forward_black_24dp"
                        android:tint="@color/blue">

                    </ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_set"
                    android:orientation="horizontal"
                    android:weightSum="4">




                    <LinearLayout
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/orderstatusimg"
                            android:layout_width="@dimen/common_20_dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/order_status">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="?attr/hint_text_color"
                            android:text="@string/Order_Status2">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/edit_order"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/editorderimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/edit_order">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="?attr/hint_text_color"

                            android:text="@string/Edit_order">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delete"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/deleteimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/delete">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="?attr/hint_text_color"
                            android:text="@string/Delete">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/downlodell"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/downloadeimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/download_new">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="?attr/hint_text_color"
                            android:text="Download">

                        </TextView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/common_10_dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/repeat_order"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_30_dp"
                        android:layout_marginLeft="@dimen/common_5_dp"
                        android:background="@drawable/btnstyle"
                        android:padding="@dimen/common_5_dp"
                        android:text="Repeat Order"
                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>