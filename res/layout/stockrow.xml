<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#EFF6FF"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="3dp">


    <LinearLayout
        android:padding="@dimen/common_10_dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/common_5_dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/work_sans"
                android:textSize="8sp"
                android:layout_height="wrap_content"
                android:text="@string/Warehouse">

            </TextView>
            <TextView
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/work_sans"
                android:textSize="8sp"
                android:layout_height="wrap_content"
                android:text="@string/Addressn">

            </TextView>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/common_5_dp"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/ss_name"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textSize="10sp"
            android:textColor="@color/primarycolor"
            android:fontFamily="@font/work_sans"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/Warehouse">

        </TextView>
        <TextView
            android:id="@+id/ss_address"
            android:gravity="right"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textSize="10sp"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/primarycolor"
            android:layout_height="wrap_content"
            android:text="@string/Addressn">

        </TextView>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/common_5_dp"

            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/work_sans"

                android:textSize="8sp"
                android:layout_height="wrap_content"
                android:text="@string/city">

            </TextView>
            <TextView
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/work_sans"
                android:textSize="8sp"
                android:layout_height="wrap_content"
                android:text="@string/state">

            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/common_5_dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ss_city"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="@color/primarycolor"
                android:fontFamily="@font/work_sans"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/state">

            </TextView>
            <TextView
                android:id="@+id/ss_state"
                android:gravity="right"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="10sp"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/primarycolor"
                android:layout_height="wrap_content"
                android:text="@string/Addressn">

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="@dimen/common_5_dp"
            android:id="@+id/ss_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/black"
            android:text="@string/Addressn"
            >

        </TextView>


        <LinearLayout
            android:layout_marginBottom="@dimen/common_5_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ss_RP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="rp"
                >

            </TextView>
            <TextView

                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text=":"
                >

            </TextView>

            <TextView
                android:id="@+id/ss_MRP"
                android:layout_marginLeft="@dimen/common_5_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="mrp"
                >

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_marginBottom="@dimen/common_5_dp"
            android:id="@+id/ss_grossstock"
            android:textSize="8sp"
            android:fontFamily="@font/work_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </TextView>
        <TextView
            android:layout_marginBottom="@dimen/common_5_dp"
            android:id="@+id/ss_sellable"
            android:textSize="8sp"
            android:fontFamily="@font/work_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </TextView>
        <TextView
            android:layout_marginBottom="@dimen/common_5_dp"
            android:id="@+id/ss_update"
            android:textSize="8sp"
            android:fontFamily="@font/work_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jggsx"
            android:layout_gravity="right"
            >

        </TextView>

    </LinearLayout>



</androidx.cardview.widget.CardView>