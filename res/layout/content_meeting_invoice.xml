<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Activity_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.MeetingInvoice"
    tools:showIn="@layout/activity_meeting_invoice">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="?attr/metal_headder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <LinearLayout
            android:id="@+id/mm_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mm_header_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/common_10_dp"
            android:layout_marginRight="@dimen/common_10_dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="?attr/cardbackground"
                android:layout_marginBottom="@dimen/common_5_dp"
                android:elevation="@dimen/common_4_dp"
                app:cardCornerRadius="@dimen/common_10_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/work_sans"
                        android:text="@string/Agenda"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text="@string/Action_Item"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/Action_Item_Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text=""
                            android:textColor="?attr/hint_text_color"
                            android:textSize="12sp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text="@string/Assigned_To"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/Assigned_To_Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text="@string/Due_Date"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/Due_Date_Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text=" "
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text="Status"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/Status_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text=" "
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text="@string/Description"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/Description_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/work_sans"
                            android:text=" "
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10sp">

                        </TextView>
                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mm_card_layout"
            android:layout_marginTop="@dimen/common_40_dp"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/m_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_30_dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:background="@drawable/btnstyle"
                android:text="Share"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/m_btn_close"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_30_dp"
                android:background="@drawable/btnstyle"
                android:text="@string/Close"
                android:textColor="@color/white">

            </Button>


        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
