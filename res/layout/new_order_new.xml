<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.msimplelogic.activities.NewOrderActivity"
    tools:showIn="@layout/neworder_main">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="13dp"
                app:cardBackgroundColor="?attr/cardbackground"
                android:padding="@dimen/common_5_dp"
                app:cardCornerRadius="@dimen/common_20_dp">

                <LinearLayout
                    android:id="@+id/containerNewOrder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/common_10_dp"
                    android:orientation="vertical">

                    <!--<TextView-->
                    <!--android:id="@+id/txtWelcomeUser"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="Today's Target : Rs 1270.00"-->
                    <!---->
                    <!---->
                    <!--android:textColor="#FFFFFF"-->
                    <!--android:background="#BDBDBD"-->
                    <!--android:gravity="center"-->
                    <!--android:textSize="15sp"  >-->
                    <!--</TextView>-->

                    <AutoCompleteTextView
                        android:id="@+id/Product_Variant_search"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_below="@+id/txtWelcomeUser"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="4dp"
                        android:completionThreshold="1"
                        android:drawableRight="@drawable/search_icon"
                        android:ems="10"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:hint="@string/Search_all"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:textSize="15dp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <TextView
                        android:layout_above="@+id/search_lout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_1_dp"
                        android:visibility="invisible"
                        android:background="@color/black">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/search_lout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/search_spinner_recycleview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/hidden_buttonlayout"
                            android:layout_marginTop="3dp"
                            android:scrollbars="vertical"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/hidden_buttonlayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <Button
                                android:id="@+id/list_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/metal_button"
                                android:paddingLeft="@dimen/button_left_padding"
                                android:paddingTop="@dimen/button_top_padding"
                                android:paddingRight="@dimen/button_right_padding"
                                android:paddingBottom="@dimen/button_bottom_padding"
                                android:text="@string/Cancel"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/show_list_fromsearch"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"

                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/metal_button"
                                android:paddingLeft="@dimen/button_left_padding"
                                android:paddingTop="@dimen/button_top_padding"
                                android:paddingRight="@dimen/button_right_padding"
                                android:paddingBottom="@dimen/button_bottom_padding"
                                android:text="@string/Offline_Order"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/list_ok"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/metal_button"
                                android:paddingLeft="@dimen/button_left_padding"
                                android:paddingTop="@dimen/button_top_padding"
                                android:paddingRight="@dimen/button_right_padding"
                                android:paddingBottom="@dimen/button_bottom_padding"
                                android:text="@string/Online_Catalogue"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:visibility="gone" />


                        </LinearLayout>
                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/spnCategory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:gravity="center"
                        style="@style/mySpinnerItemStyle"
                        android:hint="Select Category"
                        android:inputType="textPersonName"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        ></Spinner>

                    <TextView
                        android:layout_above="@+id/spnProduct"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_1_dp"
                        android:visibility="invisible"
                        android:background="@color/black">

                    </TextView>

                    <Spinner
                        android:id="@+id/spnProduct"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:gravity="center"
                        android:hint="Select Product"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        style="@style/mySpinnerItemStyle"
                        android:inputType="textPassword"
                         />

                    <TextView
                        android:layout_above="@+id/Product_Variant"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_1_dp"
                        android:visibility="invisible"
                        android:background="@color/black">

                    </TextView>


                    <Spinner
                        android:id="@+id/spnProductSpec"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:hint="Select Product Specification"
                        android:inputType="textPassword"
                        android:textSize="40sp"
                        android:visibility="gone" />


                    <AutoCompleteTextView
                        android:id="@+id/Product_Variant"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/common_10_dp"
                        android:layout_marginBottom="5dp"
                        android:completionThreshold="1"
                        android:drawableRight="@drawable/search_icon"
                        android:ems="10"
                        android:hint="@string/Search_Variants"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:scrollbars="none"
                        android:singleLine="true"
                        android:padding="7dp"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textRP"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#414042"
                            android:gravity="center"
                            android:text="RP"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/editTextRP"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/textRPghh"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#414042"
                            android:gravity="center"
                            android:text="MRP"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/editTextMRP"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextQuantity1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:maxLength="9"
                        android:paddingTop="10dp"
                        android:visibility="gone"></EditText>

                    <Spinner
                        android:id="@+id/spnScheme1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:hint="Scheme"
                        android:paddingTop="10dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/txtDeleiveryQuantity"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="Delivery Quantity"
                        android:paddingTop="10dp"
                        android:textSize="17dp"
                        android:visibility="gone"></EditText>

                    <TextView
                        android:id="@+id/txtPrice1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:text="Total Price : "
                        android:textSize="17dp"
                        android:visibility="gone"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_margin="@dimen/common_10_dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/online_catalogue"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/metal_button"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Online_Catalogue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/show_list"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/metal_button"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Offline_Order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/buttonPreviewOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/metal_button"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Preview_Order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/local_catalogue"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/metal_button"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Local_Catalogue"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonAddMOre"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="center"
                        android:background="@drawable/metal_button"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>