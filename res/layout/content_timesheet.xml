<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_50_dp">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theameh"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_10_dp"
           >

            <com.harrywhewell.scrolldatepicker.DayScrollDatePicker
                android:id="@+id/day_date_picker1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/target_lout"
                android:visibility="gone"
                android:background="@drawable/leavebal_bg"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/day_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="?attr/cardbackground"
                android:layout_below="@+id/tab_lout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calendar"
                    android:gravity="center"
                    android:textColor="?attr/filter_short_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/common_15_dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/common_5_dp"
                    />

                <com.skyhope.eventcalenderlibrary.CalenderEvent
                    android:id="@+id/calender_event"
                    android:layout_width="match_parent"
                    app:selector_color="#9BC8FF"
                    android:layout_marginTop="22dp"
                    android:visibility="gone"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#EBEBEB"
                        android:gravity="center"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.view.calender.horizontal.umar.horizontalcalendarview.HorizontalCalendarView
                        android:id="@+id/horizontalcalendarview"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/month"
                        android:layout_height="70dp">

                    </com.view.calender.horizontal.umar.horizontalcalendarview.HorizontalCalendarView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <Switch
                android:id="@+id/switch_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_date_picker"
                android:padding="10dp"
                android:thumbTint="@color/primarycolor"
                android:trackTint="@color/gray"
                android:textColor="?attr/filter_short_text_color"
                android:layout_alignParentLeft="true"
                android:text="Show Comments   "/>

            <ImageView
                android:id="@+id/imgplus_timesheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_date_picker"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:visibility="visible"
                android:src="@drawable/add_circle_outline"
                android:tint="#57728A"/>

            <TextView
                android:id="@+id/txttimesheet_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_date_picker"
                android:layout_toLeftOf="@+id/imgplus_timesheet"
                android:padding="10dp"
                android:textSize="@dimen/common_15_dp"
                android:visibility="invisible"
                android:textColor="?attr/filter_short_text_color"
                android:text="@string/Filter"/>

            <ImageView
                android:id="@+id/filterimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/day_date_picker"
                android:layout_toLeftOf="@+id/txttimesheet_filter"
                android:padding="10dp"
                android:visibility="invisible"
                android:layout_marginTop="2dp"
                android:src="@drawable/filterordertype_icon" />


            <LinearLayout
                android:id="@+id/timesheet_lout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_above="@+id/btnsave_timesheet"
                android:layout_marginBottom="@dimen/common_5_dp"
                android:layout_below="@+id/txttimesheet_filter"

                >

                <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                    android:id="@+id/timesheet_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:shimmer_demo_child_count="10"
                    app:shimmer_demo_grid_child_count="2"
                    app:shimmer_demo_layout_manager_type="linear_vertical"
                    app:shimmer_demo_angle="0"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btnsave_timesheet"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/common_10_dp"
                android:textAllCaps="false"
                android:visibility="visible"
                android:background="@drawable/metal_button"
                android:textColor="#ffffff"
                android:text="Share"
                />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>