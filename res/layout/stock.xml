<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_50_dp"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_gravity="center" >

                    <RelativeLayout
                        android:id="@+id/rlout_price"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1.00" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"

                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Price List"
                            android:textColor="#9d9d9d"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlout_stock"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1.00" >

                        <TextView
                            android:id="@+id/textView1gh"
                            android:layout_width="126dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:text="Stock"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/buttonshape1"
                            android:textColor="#111111"
                            android:gravity="center"
                            android:textSize="15dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerNewOrder"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border_shadow"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        android:layout_gravity="center">

                        <AutoCompleteTextView
                            android:id="@+id/warehouse_list1"
                            android:layout_width="250dp"
                            android:layout_gravity="center"
                            android:theme="@style/Autocomplete"
                            android:inputType="textMultiLine"
                            android:scrollbars="none"
                            android:completionThreshold="1"
                            android:imeOptions="actionDone"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:ems="10"
                            android:singleLine="true"
                            android:drawableRight="@drawable/search_icon"
                            android:textSize="15dp"
                            android:hint="@string/Enter_Warehouse">
                            <requestFocus />
                        </AutoCompleteTextView>

                        <AutoCompleteTextView
                            android:id="@+id/product_list"
                            android:layout_width="250dp"
                            android:theme="@style/Autocomplete"
                            android:layout_gravity="center"
                            android:inputType="textMultiLine"
                            android:scrollbars="none"
                            android:completionThreshold="1"
                            android:imeOptions="actionDone"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:ems="10"
                            android:singleLine="true"
                            android:drawableRight="@drawable/search_icon"
                            android:textSize="15dp"
                            android:hint="@string/Enter_Product">
                            <requestFocus />
                        </AutoCompleteTextView>

                        <Button
                            android:id="@+id/ware_result_button"
                            android:layout_width="250dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="#414042"
                            android:layout_marginBottom="10dp"
                            android:text="@string/Search"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_border_new"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/common_10_dp">

                            <TextView
                                android:id="@+id/txt_select"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Select"
                                android:textColor="?attr/hint_text_color" />

                            <RadioGroup
                                android:id="@+id/radio_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_select"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioMale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="Warehouse" />

                                <RadioButton
                                    android:id="@+id/radioFemale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/common_20_dp"
                                    android:visibility="invisible"
                                    android:text="@string/Distributor" />

                            </RadioGroup>


                        </RelativeLayout>

                        <Spinner
                            android:id="@+id/warehouse_list"
                            style="@style/mySpinnerItemStyle"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:inputType="textPersonName"
                            android:paddingTop="10dp"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor">

                        </Spinner>

                        <Spinner
                            android:id="@+id/spnCategory"
                            style="@style/mySpinnerItemStyle"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:hint="Select Category"
                            android:inputType="textPersonName"
                            android:paddingTop="10dp"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"></Spinner>

                        <Spinner
                            android:id="@+id/spnProduct"
                            style="@style/mySpinnerItemStyle"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:hint="Select Product"
                            android:inputType="textPassword"
                            android:paddingTop="10dp"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor" />

                        <AutoCompleteTextView
                            android:id="@+id/Product_Variant"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:drawableRight="@drawable/search_icon"
                            android:completionThreshold="1"
                            android:ems="10"
                            android:scrollbars="none"
                            android:hint="@string/Search_Variants"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:textColorHint="?attr/hint_text_color"
                            android:textSize="14sp">

                            <requestFocus />
                        </AutoCompleteTextView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cardListn"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>