<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="?attr/cardbackground"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="@dimen/common_10_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:padding="@dimen/common_5_dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/common_5_dp"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/v_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_5_dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rp_catalogue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/SRP"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rpv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="3490.0"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rp_separator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:textColor="?attr/hint_text_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mrp_catalogue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SMRP"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mrpv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="3520.0"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="10dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/common_5_dp"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/in_stock_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/IN_STOCK"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/s_disable_edit_value"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/squareedittext"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:enabled="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text=""
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:textSize="11dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/common_5_dp"
                    android:layout_weight="0.95"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_stock_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Current_Stock"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/plus_minus_lout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/minus_btn"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:background="@drawable/minus_btn" />

                        <EditText
                            android:id="@+id/u_stock_edit_value"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/common_2_dp"
                            android:layout_marginRight="@dimen/common_2_dp"
                            android:background="@drawable/squareedittext"
                            android:ems="10"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="5"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="11dp" />

                        <ImageView
                            android:id="@+id/plus_btn"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:background="@drawable/add_plus" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



                <TextView
                    android:id="@+id/stock_erroe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_layout"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="ghjghj"
                    android:textColor="@color/primarycolor"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stock_product_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/stock_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>