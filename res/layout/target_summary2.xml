<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerNewOrder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    android:layout_marginTop="@dimen/common_50_dp"
    >

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_viewdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="14dp"
                    android:layout_marginTop="5dp"
                    card_view:cardBackgroundColor="?attr/cardbackground"
                    android:layout_below="@+id/month_date_picker"
                    >
                    <LinearLayout
                        android:id="@+id/dfg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="?attr/cardbackground"
                        android:layout_marginTop="0dp"
                        >
                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1.00" >

                            <TextView
                                android:id="@+id/T_from_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:paddingLeft="5dp"
                                android:textColor="?attr/visit_schedule_historytext"
                                android:drawableTint="?attr/filter_short_text_color"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/calendar_icon"
                                android:layout_marginLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentTop="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/To"
                            android:textColor="?attr/filter_short_text_color"
                            android:gravity="center"
                            android:textSize="16dp"
                            />

                        <RelativeLayout
                            android:id="@+id/salehistory_btnlhjk"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1.00" >

                            <TextView
                                android:id="@+id/T_to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="?attr/visit_schedule_historytext"
                                android:drawableTint="?attr/filter_short_text_color"
                                android:paddingRight="5dp"
                                android:drawableLeft="@drawable/calendar_icon"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:textSize="15dp"

                                android:layout_alignParentLeft="true"

                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_viewtarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dfg"
                    card_view:cardBackgroundColor="?attr/cardbackground"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="14dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp">

                        <TextView
                            android:id="@+id/txt_target"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="12dp"
                            android:layout_marginLeft="@dimen/common_10_dp"
                            android:text="@string/Targett"/>

                        <TextView
                            android:id="@+id/target_value_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_target"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/common_20_dp"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="11dp"
                            android:text="300" />

                        <TextView
                            android:id="@+id/txt_achieved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="12dp"
                            android:text="@string/Achieved"/>

                        <TextView
                            android:id="@+id/achieved_value_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/txt_achieved"
                            android:layout_marginTop="@dimen/common_5_dp"
                            android:textStyle="bold"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="11dp"
                            android:text="1.02"/>

                        <TextView
                            android:id="@+id/txt_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/common_20_dp"
                            android:textStyle="bold"
                            android:textColor="?attr/hint_text_color"
                            android:textSize="12dp"
                            android:text="@string/Percentage"/>

                        <TextView
                            android:id="@+id/age_value_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_percentage"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/common_5_dp"
                            android:layout_marginRight="@dimen/common_20_dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/common_20_dp"
                            android:textColor="?attr/filter_short_text_color"
                            android:textSize="11dp"
                            android:text="0%" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardList"
                    android:layout_width="match_parent"
                    android:layout_height="410dp"
                    android:saveEnabled="true"
                    android:layout_below="@+id/card_viewtarget"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"

                >
                <LinearLayout
                    android:id="@+id/product_value_header"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#414042"
                    android:visibility="gone"
                    android:layout_marginTop="0dp"


                    >
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.00" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Targett"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:textColor="#f9f5f5"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/saleupdate_btn"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.00"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Achieved"
                            android:textColor="#f9f5f5"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/textView39"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/salehistory_btn"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.00" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Percentage"
                            android:textColor="#f9f5f5"
                            android:textStyle="bold"
                            android:paddingRight="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textSize="18dp"

                            android:layout_alignParentLeft="true"

                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_ACVALUE"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="#faf9f9"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/product_value_header"
                    >
                    <RelativeLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.00" >

                        <TextView
                            android:id="@+id/target_value_final1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:textColor="#060606"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true" />

                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.00"
                        >

                        <TextView
                            android:id="@+id/achieved_value_final1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#060606"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"

                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1.00" >

                        <TextView
                            android:id="@+id/age_value_final1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:paddingRight="5dp"
                            android:textColor="#060606"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_alignParentLeft="true"

                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/ts2back"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:text="@string/Back_button"
                        android:textAllCaps="false"
                        android:background="@drawable/metal_button"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/ts2more"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:text="@string/More"
                        android:textAllCaps="false"
                        android:background="@drawable/metal_button"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>