<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/swipelist_backview"
        android:tag="back"
        android:layout_width="fill_parent"
        android:layout_height="73dp"
        android:weightSum="100"
        android:gravity="right|center"
        android:paddingTop="2dp"
        android:visibility="gone"
        android:paddingBottom="6dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/example_row_b_action_3"
            android:layout_weight="10"
            android:layout_marginTop="5dp"

            android:src="@drawable/new_prev_detailicon"

            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/example_row_b_action_1"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:src="@drawable/new_prev_editicon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/example_row_b_action_2"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:src="@drawable/new_prev_deleteicon"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/swipelist_frontview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:weightSum="100">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/custprofile_home"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/example_row_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#494949"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/example_row_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/example_row_tv_title"
                android:layout_marginTop="3dp"
                android:inputType="number"
                android:text=""
                android:textColor="#B0B0B0"
                android:textSize="12dp"
                 />

            <TextView
                android:id="@+id/example_row_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/example_row_tv_description"
                android:layout_marginTop="3dp"
                android:inputType="number"
                android:text="sfhgfdhgh"
                android:textColor="#2F5C82"
                android:textSize="12dp" />



            <TextView
                android:id="@+id/order_idn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="28"
                android:gravity="center"
                android:text="@string/desc"
                android:textSize="13dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>