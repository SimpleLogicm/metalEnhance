<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metal_bg_all"
    android:layout_marginTop="@dimen/common_50_dp"
    tools:context="com.msimplelogic.activities.ReturnOrder1"
    tools:showIn="@layout/activity_return_order">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/containerNewOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="13dp"
            android:padding="@dimen/common_5_dp"
            android:background="@drawable/border_shadow"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/txtWelcomeUser"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="Today's Target : Rs 1270.00"-->
            <!---->
            <!---->
            <!--android:textColor="#FFFFFF"-->
            <!--android:background="#BDBDBD"-->
            <!--android:gravity="center"-->
            <!--android:textSize="15sp"  >-->
            <!--</TextView>-->

            <AutoCompleteTextView
                android:id="@+id/Product_Variant_search"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_below="@+id/txtWelcomeUser"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="4dp"

                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:completionThreshold="1"
                android:drawableRight="@drawable/search_icon"
                android:ems="10"
                android:hint="@string/Search_all"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textSize="15dp">

                <requestFocus />
            </AutoCompleteTextView>

            <RelativeLayout
                android:id="@+id/search_lout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_spinner_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/hidden_buttonlayout"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/hidden_buttonlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <Button
                        android:id="@+id/list_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/metal_button"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/show_list_fromsearch"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"

                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/metal_button"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Offline_Order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/list_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/metal_button"
                        android:paddingLeft="@dimen/button_left_padding"
                        android:paddingTop="@dimen/button_top_padding"
                        android:paddingRight="@dimen/button_right_padding"
                        android:paddingBottom="@dimen/button_bottom_padding"
                        android:text="@string/Online_Catalogue"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />


                </LinearLayout>
            </RelativeLayout>

            <Spinner
                android:id="@+id/spnCategory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_10_dp"
                android:gravity="center"
                android:hint="Select Category"
                android:inputType="textPersonName"
                android:paddingTop="20dp"
                android:theme="@style/AppTheme"></Spinner>

            <Spinner
                android:id="@+id/spnProduct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_10_dp"
                android:gravity="center"
                android:hint="Select Product"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:theme="@style/AppTheme" />

            <Spinner
                android:id="@+id/spnProductSpec"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Select Product Specification"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:textSize="40sp"
                android:visibility="gone" />

            <AutoCompleteTextView
                android:id="@+id/Product_Variant"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginBottom="5dp"
                android:completionThreshold="1"
                android:drawableRight="@drawable/search_icon"
                android:ems="10"
                android:textColorHint="?attr/hint_text_color"

                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:hint="@string/Search_Variants"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:scrollbars="none"
                android:singleLine="true"
                android:textSize="14dp"
                >

                <requestFocus />
            </AutoCompleteTextView>



        </LinearLayout>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_10_dp"
            android:background="@drawable/btnstyle"
            android:text="@string/Search"
            android:textColor="@color/white">

        </Button>


        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/border_shadow"
            android:orientation="vertical"
            android:padding="@dimen/common_5_dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textRP"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/RP"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/editTextRP"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textMRP"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/MRP"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/editTextMRP"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans"
                    android:text="@string/PQUANTITY"
                    android:textColor="@color/black"
                    android:textSize="16sp">

                </TextView>

                <EditText
                    android:id="@+id/editTextQuantity1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@drawable/border_shadow"
                    android:cursorVisible="true"
                    android:maxLength="9"
                    android:paddingLeft="@dimen/common_10_dp"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans"
                    android:text="@string/Batch_no"
                    android:textColor="@color/black"
                    android:textSize="16sp">

                </TextView>

                <EditText
                    android:id="@+id/editTextbatchno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_shadow"
                    android:cursorVisible="true"
                    android:maxLength="9"
                    android:paddingLeft="@dimen/common_10_dp"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans"
                    android:text="@string/Refund_amount"
                    android:textColor="@color/black"
                    android:textSize="16sp">

                </TextView>

                <EditText
                    android:id="@+id/txtPrice1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_shadow"
                    android:enabled="false"
                    android:inputType="number"
                    android:maxLength="9"
                    android:paddingLeft="@dimen/common_10_dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp">

                </EditText>


            </LinearLayout>


            <EditText
                android:id="@+id/return_order_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:layout_marginBottom="@dimen/common_10_dp"
                android:backgroundTint="#c3c3c3"
                android:cursorVisible="true"
                android:hint="@string/ERemarks"
                android:paddingLeft="@dimen/common_10_dp"
                android:textCursorDrawable="@null">

            </EditText>




        </LinearLayout>

        <ImageView
            android:id="@+id/camerabtn"
            android:layout_width="@dimen/common_40_dp"
            android:layout_height="@dimen/common_40_dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/common_10_dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/cam"
            android:visibility="gone">

        </ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:scrollbars="horizontal"
            android:visibility="gone" />
        <Button
            android:id="@+id/buttonPreviewOrder"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btnstyle"
            android:text="@string/Return_Order"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>




    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddMOre"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Add"
        android:textColor="#FFFFFF"
        android:visibility="gone" />


    <Spinner
        android:id="@+id/spnScheme1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Scheme"
        android:paddingTop="10dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/txtDeleiveryQuantity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Delivery Quantity"
        android:paddingTop="10dp"
        android:textSize="17dp"
        android:visibility="gone"></EditText>
</LinearLayout>

