<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.UpdateStockScreen1"
    tools:showIn="@layout/activity_update_stock_screen1">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/us_media_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/s_header_image"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="@dimen/common_10_dp"
                card_view:cardBackgroundColor="?cardbackground"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/common_5_dp"
                    android:orientation="vertical">

                    <AutoCompleteTextView
                        android:id="@+id/up_stock_Product_Variant"
                        android:layout_width="290dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:completionThreshold="1"
                        android:drawableRight="@drawable/search_icon"
                        android:ems="10"
                        android:hint="@string/Search_Variants"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        android:backgroundTint="@color/light_grey"
                        android:textSize="15dp">

                        <requestFocus />
                    </AutoCompleteTextView>

                    <RelativeLayout
                        android:id="@+id/list_container_stock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_margin="5dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/spinner_recycleview_stock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_above="@+id/list_s_button"
                            android:scrollbars="vertical"
                            />


                        <LinearLayout
                            android:id="@+id/list_s_button"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            >

                            <Button
                                android:id="@+id/list_cancel_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/metal_button"
                                android:paddingLeft="@dimen/button_left_padding"
                                android:paddingTop="@dimen/button_top_padding"
                                android:paddingRight="@dimen/button_right_padding"
                                android:paddingBottom="@dimen/button_bottom_padding"
                                android:text="@string/Cancel"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp" />


                            <Button
                                android:id="@+id/list_ok_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/metal_button"
                                android:paddingLeft="@dimen/button_left_padding"
                                android:paddingTop="@dimen/button_top_padding"
                                android:paddingRight="@dimen/button_right_padding"
                                android:paddingBottom="@dimen/button_bottom_padding"
                                android:text="@string/Search"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/up_stock_spnCategory"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        style="@style/mySpinnerItemStyle"
                        android:hint="Select Category"
                        android:inputType="textPersonName"
                        android:paddingTop="10dp"></Spinner>

                    <Spinner
                        android:id="@+id/up_stock_spnProduct"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"
                        android:hint="Select Product"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                        style="@style/mySpinnerItemStyle"                        android:inputType="textPassword"
                        android:paddingTop="10dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/up_stock_search"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/us_media_card_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/metal_button"
                android:paddingLeft="@dimen/button_left_padding"
                android:paddingTop="@dimen/button_top_padding"
                android:paddingRight="@dimen/button_right_padding"
                android:paddingBottom="@dimen/button_bottom_padding"
                android:text="@string/Search"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>