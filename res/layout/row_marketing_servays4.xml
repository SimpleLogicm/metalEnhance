<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_10_dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card1_2input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/common_10_dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/common_10_dp">

            <TextView
                android:id="@+id/tv_no_products1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="@string/no_of_product_displayed"
                android:textColor="@color/primarycolor"
                android:textSize="16sp"
                android:textStyle="bold"

                >

            </TextView>

            <TextView
                android:id="@+id/tv_on_floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="On the floor"
                android:textSize="12sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/et_onfloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_5_dp"
                android:backgroundTint="@color/gray"
                android:cursorVisible="true"
                android:inputType="number"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14dp">

            </EditText>

            <TextView
                android:id="@+id/tv_on_shell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="On the Shell"
                android:textSize="12sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/et_on_shell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_5_dp"
                android:backgroundTint="@color/gray"
                android:cursorVisible="true"
                android:inputType="number"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14dp">

            </EditText>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2_1input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10_dp"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/common_10_dp"
        app:cardElevation="@dimen/common_4_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/common_10_dp">

            <TextView
                android:id="@+id/no_of_products2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="@string/no_of_product_displayed"
                android:textColor="@color/primarycolor"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_5_dp"
                android:backgroundTint="@color/gray"
                android:hint="@string/Description"
                android:textSize="14dp">

            </EditText>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>