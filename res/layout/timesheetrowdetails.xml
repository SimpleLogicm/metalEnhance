<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="?attr/cardbackground"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_5_dp"
        app:cardCornerRadius="@dimen/common_10_dp"
        app:cardElevation="@dimen/common_10_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_5_dp">

            <EditText
                android:id="@+id/tmdetails_from"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.62"
                android:ems="10"
                android:focusable="false"
                android:editable="false"
                android:textSize="@dimen/common_15_dp"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:hint="  From"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:backgroundTint="#c3c3c3"
                android:inputType="text">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/tmdetails_to"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.62"
                android:ems="10"
                android:textSize="@dimen/common_15_dp"
                android:layout_toRightOf="@+id/tmdetails_from"
                android:hint="  To"
                android:focusable="false"
                android:editable="false"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:backgroundTint="#c3c3c3"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:inputType="text">

                <requestFocus />
            </EditText>


            <EditText
                android:id="@+id/et_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tmdetails_from"
                android:textSize="@dimen/common_15_dp"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:backgroundTint="#c3c3c3"
                android:hint="@string/Task11"/>

            <EditText
                android:id="@+id/et_details1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_task"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:backgroundTint="#c3c3c3"
                android:textSize="@dimen/common_15_dp"
                android:hint="@string/Detail1"/>

            <EditText
                android:id="@+id/et_details2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_details1"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:backgroundTint="#c3c3c3"
                android:textSize="@dimen/common_15_dp"
                android:hint="@string/Detail2"/>


            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/et_details2"
                android:gravity="left"
                android:layout_margin="@dimen/common_5_dp"
                android:textSize="@dimen/common_15_dp"
                android:padding="@dimen/common_10_dp"
                android:textColorHint="?attr/hint_text_color"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                android:background="@drawable/border_shadow"
                android:hint="@string/ERemarks"/>

<TextView
    android:id="@+id/fav_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/et_remark"
    android:text="false"
    android:visibility="invisible"
    android:layout_toLeftOf="@+id/fav_img"/>

            <ImageView
                android:id="@+id/fav_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_marginRight="@dimen/common_20_dp"
                android:layout_below="@+id/et_remark"/>

            <ImageView
                android:id="@+id/fav_img_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_favorite_red_24dp"
                android:layout_marginRight="@dimen/common_20_dp"
                android:visibility="gone"
                android:layout_below="@+id/et_remark"/>

            <ImageButton
                android:id="@+id/btnRemove"
                android:layout_width="@dimen/common_20_dp"
                android:layout_height="@dimen/common_20_dp"
                android:contentDescription="@string/Delete"
                android:layout_below="@+id/et_remark"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:src="@android:drawable/ic_delete"
                android:visibility="visible" />
        </RelativeLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>