<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Smart_Order"
    tools:showIn="@layout/activity_smart__order">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/fulllayoutbg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="?attr/metal_headder">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/rv_bottom"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.8"
                        app:cardBackgroundColor="?attr/cardbackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp">

                        <AutoCompleteTextView
                            android:id="@+id/Product_Variant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#c3c3c3"
                            android:completionThreshold="1"
                            android:drawableRight="@drawable/search_icon"
                            android:ems="10"
                            android:hint="@string/Search_Customer"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine"
                            android:scrollbars="none"
                            android:singleLine="true"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:textColorHint="?attr/hint_text_color"
                            android:textSize="14dp">

                            <requestFocus />
                        </AutoCompleteTextView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/filter_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/common_10_dp"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="?attr/metal_filterr"
                            android:visibility="gone" />


                    </LinearLayout>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:padding="@dimen/common_10_dp">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/rv_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_20_dp"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/privious"
                        android:layout_width="@dimen/common_30_dp"
                        android:layout_height="@dimen/common_20_dp"
                        android:background="@drawable/ic_arrow_back_black_24dp"
                        android:tint="?attr/visit_schedule_historytext"
                        android:visibility="gone">

                    </ImageView>

                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.98">

                    </TextView>

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="@dimen/common_30_dp"
                        android:layout_height="@dimen/common_20_dp"
                        android:background="@drawable/ic_arrow_forward_black_24dp"
                        android:tint="?attr/visit_schedule_historytext"
                        android:visibility="gone">

                    </ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_set"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <LinearLayout
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/orderstatusimg"
                            android:layout_width="@dimen/common_20_dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/order_status">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Order_Status2"
                            android:textColor="?attr/hint_text_color">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_order"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/editorderimg"
                            android:layout_width="30dp"
                            android:tint="@color/black"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/edit_order">

                        </ImageView>

                        <TextView
                            android:id="@+id/edittxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="16sp"                            android:text="@string/Edit_order"
                            android:textColor="?attr/hint_text_color">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delete"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/deleteimg"
                            android:tint="@color/black"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/delete">

                        </ImageView>

                        <TextView
                            android:id="@+id/deletetxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Delete"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?attr/hint_text_color">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/downlodell"
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/downloadeimg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/download_new">

                        </ImageView>

                        <TextView
                            android:id="@+id/downloadtxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Download"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?attr/hint_text_color">

                        </TextView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="@dimen/common_0_dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/common_10_dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_30_dp"
                        android:layout_marginRight="@dimen/common_5_dp"
                        android:background="@drawable/btnstyle"
                        android:padding="@dimen/common_5_dp"
                        android:text="@string/Favourite"
                        android:textColor="@color/white">


                    </Button>

                    <Button
                        android:id="@+id/repeatorder"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_30_dp"
                        android:layout_marginLeft="@dimen/common_5_dp"
                        android:background="@drawable/btnstyle"
                        android:padding="@dimen/common_5_dp"
                        android:text="@string/Repeat_Order"
                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>