<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.MarketingMaterial"
    tools:showIn="@layout/activity_marketing_material">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/rating_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingBottom="10dp"
                    app:cardCornerRadius="10dp"
                    card_view:cardBackgroundColor="?attr/cardbackground"
                    card_view:cardElevation="10dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/editText1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/work_sans"
                            android:inputType="textPersonName"
                            android:hint="@string/CompetitorName"
                            android:padding="10dp"

                            app:backgroundTint="@color/black_overlay"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="16sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/POSM"
                                android:textColor="?attr/hint_text_color"
                                android:textSize="15dp">

                            </TextView>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/POSMText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/filter_short_text_color"
                                android:backgroundTint="#c3c3c3"
                                android:hint="@string/ENTERPOSM"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15dp">

                            </androidx.appcompat.widget.AppCompatEditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/Chillers"
                                android:textColor="?attr/hint_text_color"
                                android:textSize="15dp">

                            </TextView>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/ChillersText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/filter_short_text_color"
                                android:backgroundTint="#c3c3c3"
                                android:hint="@string/ENTERChillers"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15dp">

                            </androidx.appcompat.widget.AppCompatEditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/Hangers"
                                android:textColor="?attr/hint_text_color"
                                android:textSize="15dp">

                            </TextView>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/HangersText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/filter_short_text_color"
                                android:backgroundTint="#c3c3c3"
                                android:hint="@string/ENTERHangers"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15dp">

                            </androidx.appcompat.widget.AppCompatEditText>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/Others"
                                android:textColor="?attr/hint_text_color"
                                android:textSize="15dp">

                            </TextView>

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/OthersText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/filter_short_text_color"
                                android:backgroundTint="#c3c3c3"
                                android:hint="@string/ENTEROthers"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15dp">

                            </androidx.appcompat.widget.AppCompatEditText>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/common_5_dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    app:cardElevation="@dimen/common_4_dp"
                    app:cardBackgroundColor="?attr/cardbackground"
                    app:cardCornerRadius="@dimen/common_10_dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtRemark"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="left|top"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/work_sans"
                        android:padding="@dimen/common_10_dp"
                        android:textSize="@dimen/common_15_dp"
                        android:textColorHint="?attr/hint_text_color"
                        android:textColor="?attr/filter_short_text_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:hint="@string/REMARK">

                    </EditText>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/takepic_lout"
                    android:layout_above="@+id/button1"
                    android:layout_margin="5dp"

                    >

                    <ImageView
                        android:id="@+id/customer_services_picture"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/cam_iconn"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="#B8B8B8" />

                    <FrameLayout
                        android:id="@+id/framelout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        >

                        <!--<ImageView-->
                        <!--android:id="@+id/crossimg"-->
                        <!--android:layout_width="23dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:src="@drawable/cross"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_alignParentRight="true">-->
                        <!--</ImageView>-->

                        <ImageView
                            android:id="@+id/img_show"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter">
                        </ImageView>

                        <ImageView
                            android:id="@+id/crossimg"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="right"
                            android:src="@drawable/cross"
                            android:backgroundTint="#005B9C"
                            />
                    </FrameLayout>
                </RelativeLayout>


                <Button
                    android:layout_marginBottom="@dimen/common_10_dp"
                    android:id="@+id/marketingm_click"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:layout_gravity="center"
                    android:background="@drawable/metal_button"
                    android:paddingLeft="@dimen/button_left_padding"
                    android:paddingTop="@dimen/button_top_padding"
                    android:paddingRight="@dimen/button_right_padding"
                    android:paddingBottom="@dimen/button_bottom_padding"
                    android:text="@string/Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>





</RelativeLayout>