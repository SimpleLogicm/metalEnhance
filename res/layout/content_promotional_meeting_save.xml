<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Promotional_meeting_save"
    tools:showIn="@layout/activity_promotional_meeting_save">



    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="?attr/cardbackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_margin="@dimen/common_10_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/work_sans"
                android:text="Topic"
                >


            </TextView>
            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/work_sans"
                >


            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:enabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/work_sans"
                    android:layout_weight="1"
                    android:hint="Date"
                    android:textSize="16sp"
                    android:drawableTint="?attr/filter_short_text_color"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:drawableTint="?attr/filter_short_text_color"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:enabled="true"
                    android:fontFamily="@font/work_sans"
                    android:hint="Time"
                    android:textSize="16sp">


                </TextView>

            </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:hint="Attendees">
                    </TextView>

            <TextView
                android:id="@+id/attendees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:hint="Location">
            </TextView>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/work_sans"
               >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:hint="Type">
            </TextView>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/work_sans"
                >
            </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_record"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btnstyle"
        android:text="@string/Record"
        android:fontFamily="@font/work_sans"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white">

    </Button>

    </LinearLayout>
</LinearLayout>