<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/scl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:textAlignment="center"
            android:background="@color/bkg_card"
            android:text=""
            android:padding="@dimen/card_title_padding_top"
            android:textColor="@android:color/white"
            android:textSize="@dimen/card_title_text_size"
            android:gravity="center_vertical" />

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_corner"
            android:layout_below="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp">

            <TextView
                android:id="@+id/contact_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/contact_call_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_below="@id/contact_mobile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />


            <TextView
                android:id="@+id/contact_call_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_below="@id/contact_call_type"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />


            <TextView
                android:id="@+id/contact_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_below="@id/contact_call_duration"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/contact_mobilehidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_below="@id/contact_call_duration"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />


            <LinearLayout
                android:layout_below="@+id/contact_timestamp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/contact_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Add Retailer"
                    android:background="#414042"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>