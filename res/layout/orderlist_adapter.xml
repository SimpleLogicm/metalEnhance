<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <androidx.cardview.widget.CardView
        android:id="@+id/childButtonnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/common_10_dp"
        app:cardElevation="@dimen/common_4_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:gravity="left|center"
                        android:text="@string/Customer"
                        android:textColor="@color/primarycolor"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/o_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/work_sans"
                        android:gravity="left|center"
                        android:text="ghjghj"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:layout_marginLeft="@dimen/common_5_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_marginBottom="@dimen/common_5_dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:gravity="right|center"
                        android:text="@string/Order_id"
                        android:textColor="@color/black"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/o_oder_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/work_sans"
                        android:gravity="right|center"
                        android:text="ghjghj"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5_dp"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_marginBottom="@dimen/common_5_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/o_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_blue"
                    android:fontFamily="@font/work_sans"
                    android:drawableTint="?attr/visit_schedule_historytext"
                    android:text="gdfgdgdfgdfgfdg">

                </TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:layout_marginTop="@dimen/common_5_dp"
                android:layout_marginBottom="@dimen/common_5_dp"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/o_view"
                    android:layout_width="30dp"
                    android:layout_marginRight="@dimen/common_15_dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_prev_detailicon"

                   />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/black_overlay" />

                <ImageView
                    android:id="@+id/o_delete"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/common_15_dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_prev_deleteicon"

                    />


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>