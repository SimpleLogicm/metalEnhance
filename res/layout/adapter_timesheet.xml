<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/common_10_dp"
        app:cardBackgroundColor="?attr/cardbackground"
        android:layout_margin="5dp"
        app:cardElevation="3dp">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/txt_taskname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="?attr/hint_text_color"
        android:text="Task Name"/>

    <TextView
        android:id="@+id/txt_taskdetail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details 1"
        android:visibility="gone"
        android:textColor="?attr/hint_text_color"

        android:layout_below="@+id/txt_taskname"/>

    <TextView
        android:id="@+id/txt_taskdetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details 2"
        android:visibility="gone"
        android:textColor="?attr/hint_text_color"

        android:layout_below="@+id/txt_taskdetail1"/>

    <TextView
        android:id="@+id/txt_hrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="?attr/visit_schedule_historytext"
        android:layout_alignParentRight="true"
        android:text="3.5 hrs"/>

</RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>