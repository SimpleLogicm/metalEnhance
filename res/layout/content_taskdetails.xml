<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msimplelogic.activities.MainActivity">


    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_50_dp"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/mainll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/task_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:visibility="gone"
                            card_view:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp">

                                <EditText
                                    android:id="@+id/et_taskname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/task_name"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_taskfrom"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_taskname"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginTop="12dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/From"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_taskto"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_taskname"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="12dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/To"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_taskdescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_taskfrom"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/Description"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tasklocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_taskdescription"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/location"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tasksetreminder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tasklocation"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:clickable="false"
                                    android:focusable="false"
                                    android:hint="@string/set_reminder"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <Spinner
                                    android:id="@+id/et_tasktype"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tasksetreminder"
                                    android:layout_marginTop="12dp"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    style="@style/mySpinnerItemStyle"
                                    android:hint="@string/type"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <RelativeLayout
                            android:id="@+id/note_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/txt_notetitle"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_below="@+id/txt_filter"
                                android:layout_marginTop="60dp"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"
                                android:background="@drawable/task_autocumplete_back"
                                android:hint="@string/note_title"
                                android:paddingLeft="20dp"
                                android:paddingRight="7dp"
                                android:textCursorDrawable="@color/sky"
                                android:textSize="13dp" />


                            <EditText
                                android:id="@+id/txt_notedescription"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_below="@+id/txt_notetitle"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/task_autocumplete_back"
                                android:cursorVisible="true"
                                android:gravity="center|left|top"
                                android:hint="@string/Description"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"
                                android:inputType="textMultiLine"
                                android:padding="15dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="7dp"
                                android:textCursorDrawable="@color/sky"
                                android:textSize="13dp" />

                        </RelativeLayout>


                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/tour_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:clickable="true"
                            card_view:cardBackgroundColor="?attr/cardbackground"

                            android:foreground="?android:attr/selectableItemBackground"

                            card_view:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp">

                                <EditText
                                    android:id="@+id/et_tourname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/trip_name"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tourfrom"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tourname"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginTop="12dp"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/from_mandate"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tourto"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tourname"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/to_mandate"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <Spinner
                                    android:id="@+id/et_tourtype"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tourfrom"
                                    android:layout_marginTop="12dp"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    style="@style/mySpinnerItemStyle"
                                    android:hint="@string/type_mandate"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tourmode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tourtype"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/mode_mandate"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tourticketno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tourmode"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/ticket_no"
                                    android:inputType="text"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/et_tourdetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/et_tourticketno"
                                    android:layout_marginTop="12dp"
                                    android:textColorHint="?attr/hint_text_color"
                                    android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                    android:backgroundTint="#c3c3c3"                            android:hint="@string/Detailtour"
                                    android:textCursorDrawable="@color/sky"
                                    android:textSize="15dp" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>


            </ScrollView>

            <Button
                android:id="@+id/add_taskd_click"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="?attr/colorPrimary"
android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_10_dp"
                android:text="@string/Save"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>