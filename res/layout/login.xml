<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/url_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/setting_url"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/metal_pro" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#8B0000"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/add_retailer">

           </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logincard"
                android:orientation="vertical">
                <TextView
                    style="@style/welcometext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/Welcome">

                </TextView>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="#EFEFEF"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"

                                    android:src="@drawable/mailpic">

                                </ImageView>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"

                                android:background="@color/white"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/welcometext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Username"
                                    android:textSize="12sp">

                                </TextView>

                                <EditText
                                    android:id="@+id/editText1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#c3c3c3"
                                    android:cursorVisible="true"
                                    android:fontFamily="@font/work_sans"
                                    android:inputType="textPersonName"
                                    android:textColor="#557390"
                                    android:textSize="12sp">

                                </EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:foregroundGravity="center"
                                app:cardBackgroundColor="#EFEFEF"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/lockpic">

                                </ImageView>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"

                                android:background="@color/white"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/welcometext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Password"
                                    android:textSize="12sp">

                                </TextView>

                                <EditText
                                    android:id="@+id/editText2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                                    android:fontFamily="@font/work_sans"
                                    android:backgroundTint="#c3c3c3"
                                    android:inputType="textPassword"
                                    android:textColor="#557390"
                                    android:textSize="12sp"
                                    android:cursorVisible="true"
                                    >

                                </EditText>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/forget_pwd"
                            style="@style/signuptext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="10dp"
                            android:text="@string/Forget_Password"
                            android:textSize="14sp"
                            android:textStyle="bold">

                        </TextView>

                        <Button
                            android:id="@+id/buttonLogin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btnstyle"
                            android:fontFamily="@font/work_sans"
                            android:gravity="center"
                            android:text="@string/Sign_In"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/buttonReg"
                            style="@style/signuptext"
                            android:background="@drawable/btnstyle"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:layout_gravity="center"

                            android:text="@string/Sign_Up"
                            android:textSize="14sp"
                            android:textStyle="bold">

                        </Button>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"

                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/fingur_print_sign"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="7dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/fingureprint_icon"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_sensorauth"
                                style="@style/signuptext"
                                android:layout_below="@+id/fingur_print_sign"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"
                                android:layout_above="@+id/textViewVersion"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:text=""
                                android:layout_marginBottom="5dp"
                                android:textSize="12dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/textViewVersion"
                                style="@style/signuptext"
                                android:layout_above="@+id/textView1"
                                android:layout_width="match_parent"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="visible"
                                android:text=",jsgashahssakjjs"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/textView1"
                                style="@style/signuptext"
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center|bottom"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/work_sans"
                                android:visibility="visible"

                                android:text="@string/company_name"
                                android:textColor="#8A0808"
                                android:textSize="12sp" />



                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

    </LinearLayout>


</LinearLayout>