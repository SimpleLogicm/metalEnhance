<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metal_bg_all"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Product_comparison"
    tools:showIn="@layout/activity_product_comparison">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theamep"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/containerNewOrder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/common_10_dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="?attr/cardbackground"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spnCategory"
                            android:layout_width="290dp"
                            android:layout_marginTop="@dimen/common_10_dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Select Category"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            style="@style/mySpinnerItemStyle"
                            android:inputType="textPersonName"
                            ></Spinner>

                        <Spinner
                            android:id="@+id/spnProduct"
                            android:layout_width="290dp"
                            android:layout_marginTop="@dimen/common_10_dp"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            style="@style/mySpinnerItemStyle"
                            android:textColorHint="?attr/hint_text_color"

                            android:layout_gravity="center"
                            android:hint="Select Product"
                            android:inputType="textPassword"
                            />

                        <AutoCompleteTextView
                            android:id="@+id/Product_Variant"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:completionThreshold="1"
                            android:drawableRight="@drawable/search_icon"
                            android:ems="10"
                            android:hint="@string/Search_Variants"
                            android:imeOptions="actionDone"
                            android:theme="@style/Autocomplete"
                            android:inputType="text"
                            android:background="?attr/cardbackground"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:singleLine="true"
                            android:textSize="15dp">
                            <requestFocus />
                        </AutoCompleteTextView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cardList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="?attr/cardbackground"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/et_competitorname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/work_sans"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:backgroundTint="#c3c3c3"
                            android:hint="@string/CompetitorName"
                            android:textSize="15sp">

                        </EditText>

                        <EditText
                            android:id="@+id/et_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:backgroundTint="#c3c3c3"
                            android:fontFamily="@font/work_sans"
                            android:hint="@string/Product_Name"
                            android:textSize="15sp">

                        </EditText>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/et_quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/EQuantity"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"
                                android:fontFamily="@font/work_sans"
                                android:textSize="15sp">

                            </EditText>

                            <EditText
                                android:id="@+id/et_price"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/work_sans"
                                android:textColorHint="?attr/hint_text_color"
                                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                                android:backgroundTint="#c3c3c3"
                                android:hint="@string/Price"
                                android:textSize="15sp">

                            </EditText>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/Details"
                            android:fontFamily="@font/work_sans"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                            android:backgroundTint="#c3c3c3"
                            android:textSize="15sp">
                        </EditText>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--<ImageView-->
                        <!--android:id="@+id/crossimg"-->
                        <!--android:layout_width="23dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:src="@drawable/cross"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_alignParentRight="true">-->
                        <!--</ImageView>-->

                        <ImageView
                            android:id="@+id/img_show"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter">
                        </ImageView>

                        <ImageView
                            android:id="@+id/crossimg"
                            android:layout_width="23dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            android:src="@drawable/cross" />
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/img_camera"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:src="@drawable/cam"
                        >

                    </ImageView>
                </LinearLayout>



                <Button
                    android:id="@+id/btn_save"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnstyle"
                    android:text="@string/Save"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white">

                </Button>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>






</RelativeLayout>