<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/containerNewOrder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    

    <EditText
        android:id="@+id/spnProduct"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:editable="false"
        android:layout_marginTop="20dp"
        android:hint="@string/Item_Description"
        android:background="@android:drawable/editbox_background_normal"
        android:paddingTop="10dp" />

    <Spinner
        android:id="@+id/spnProductSpec"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Select Product Specification"
        android:inputType="textPassword"
        android:visibility="gone"
        android:paddingTop="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
         >

        <TextView
            android:id="@+id/textRP"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#414042"
            android:text="@string/RP"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/editTextRP"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#111111"
            android:text=""
            android:layout_marginLeft="7dp" />

        <TextView
            android:id="@+id/textRPfghgfh"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#414042"
            android:text="@string/MRP"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/editTextMRP"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" 
            android:textColor="#111111"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="242dp"
        android:maxLength="9"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="@string/PQUANTITY"
        android:inputType="number"
        android:paddingTop="10dp" >
    </EditText>

    <Spinner
        android:id="@+id/spnScheme"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Scheme"
        android:visibility="gone"
        android:paddingTop="10dp" />

 <!--    <TextView
        android:id="@+id/txtDeleiveryQuantity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Delivery Quantity"
        android:paddingTop="10dp"
        android:textSize="17dp" >
    </TextView>
--> 
    
     <EditText
         android:id="@+id/txtDeleiveryQuantity"
         android:layout_width="264dp"

         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="10dp"
         android:inputType="number"
         android:paddingTop="10dp"
         android:visibility="gone"
         android:textSize="17dp" >

    </EditText>
  
     <TextView
        android:id="@+id/txtPrice"
        android:layout_width="250dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
         android:text="@string/Total_Price"
        android:textSize="17dp" >
    </TextView>
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonEditBack"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/Back_button"
                android:textColor="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAddMOre"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/Update"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>