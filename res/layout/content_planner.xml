<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.msimplelogic.activities.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="50dp"
    android:id="@+id/ll">



    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hedder_theame"
            android:layout_width="match_parent"
            android:src="@drawable/light_hedder"
            android:scaleType="fitXY"
            android:layout_height="70dp">

        </ImageView>

        <ScrollView
            android:layout_gravity="center"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:id="@+id/bankcardId"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            card_view:cardCornerRadius="15dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/task_btn"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/tasks"
                                    android:padding="10dp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/home_text_size"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/bankcardId"
                            android:background="@drawable/txt_bg"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:text="@string/Task11"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:id="@+id/bankcardId1"
                            android:layout_width="130dp"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            android:layout_height="120dp"
                            card_view:cardCornerRadius="15dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/leavem_btn"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/leave_management"
                                    android:padding="10dp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/home_text_size"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/bankcardId1"
                            android:background="@drawable/txt_bg"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:text="@string/Leave_Management1"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:id="@+id/bankcardId2"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            card_view:cardCornerRadius="15dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/tourp_btn"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/tour_programme"
                                    android:padding="10dp"/>



                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/home_text_size"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/bankcardId2"
                            android:background="@drawable/txt_bg"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:text="@string/tour_program"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:id="@+id/bankcardId3"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            card_view:cardCornerRadius="15dp"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/note_btn"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:padding="10dp"
                                    android:src="@drawable/notes" />



                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/home_text_size"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/bankcardId3"
                            android:background="@drawable/txt_bg"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:text="@string/notes"/>
                    </RelativeLayout>



                </LinearLayout>


                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:id="@+id/bankcardId4"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            card_view:cardCornerRadius="15dp"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/meeting_btn"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:padding="10dp"
                                    android:src="@drawable/meeting" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/home_text_size"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/bankcardId4"
                            android:background="@drawable/txt_bg"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:text="@string/meeting"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:id="@+id/bankcardId5"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            card_view:cardBackgroundColor="?attr/cardbackground"
                            card_view:cardCornerRadius="15dp"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/timesheet_btn"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:padding="10dp"
                                    android:src="@drawable/time_sheet" />



                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="30dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/home_text_size"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/bankcardId5"
                            android:background="@drawable/txt_bg"
                            android:textColor="?attr/visit_schedule_historytext"
                            android:text="@string/timesheet"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>