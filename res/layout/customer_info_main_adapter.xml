<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_10_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/topimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/expandedblue">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/c_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:fontFamily="@font/robotomedium"
                    android:padding="@dimen/card_title_padding_top"
                    android:text="@string/Store_Name"
                    android:textColor="?attr/shopname_onorder_option"
                    android:textSize="@dimen/common_10_dp" />

                <TextView
                    android:id="@+id/c_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:fontFamily="@font/robotomedium"
                    android:padding="@dimen/card_title_padding_top"
                    android:text="gsjygs"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/c_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_10_dp"
                    android:layout_marginRight="@dimen/common_10_dp"
                    android:fontFamily="@font/robotomedium"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:id="@+id/bottomimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/expandedbottom">

            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_business_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="?attr/contents_head_onorder_option"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="center_vertical"
                        android:text="@string/Beat_Name"
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/c_beat_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="center_vertical"
                        android:text="@string/City_Name"
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/c_city_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="right|center_vertical"
                        android:text=""

                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="center_vertical"
                        android:text="@string/Credit_Profi"
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/c_credit_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="center_vertical"
                        android:text="@string/Amount_Outstanding"
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/c_ammount1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="right|center_vertical"
                        android:text=""

                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="center_vertical"
                        android:text="@string/Amount_Overdues"
                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/c_ammount2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/robotomedium"
                        android:gravity="right|center_vertical"
                        android:text=""

                        android:textColor="?attr/contents_head_onorder_option"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/c_latlon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#9CA2A9"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/c_mobile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#9CA2A9"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cus_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/robotomedium"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#9CA2A9"
                    android:textSize="12dp"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <RelativeLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/c_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:text="name 2"
                            android:textSize="12dp"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/outstanding_overdue"
                                android:layout_width="45dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/email_profile"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/c_call"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/telephone_cust_prof"
                                android:textColor="@color/white" />

                            <ImageView
                                android:id="@+id/payment"
                                android:layout_width="35dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/rupee_cust_prof"
                                android:textColor="@color/white" />


                            <ImageView
                                android:id="@+id/c_location"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/placeholder_cust_prof"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/plusminus_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/minusiconcust_profile"></ImageView>

    <ImageView
        android:id="@+id/arroew"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="@dimen/common_3_dp"
        android:src="@drawable/arrowcust_profile"></ImageView>
</RelativeLayout>