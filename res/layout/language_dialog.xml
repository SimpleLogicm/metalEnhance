<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/metal_bg_all"
    android:layout_margin="@dimen/common_5_dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="@dimen/album_title"
                android:gravity="center"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/spnLanguage"
                android:layout_width="250dp"
                android:textColor="?attr/New_orderoption_menueoptions_textcolor"
                style="@style/mySpinnerItemStyle"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:drawSelectorOnTop="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/spnLanguage"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/dialogButtonOk"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="@string/OK_Button_label"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#075B97"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/button_left_padding"
                    android:paddingTop="@dimen/button_top_padding"
                    android:paddingRight="@dimen/button_right_padding"
                    android:paddingBottom="@dimen/button_bottom_padding"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"

                    />

                <Button
                    android:id="@+id/dialogButtonCancel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="@string/Cancel"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#075B97"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/button_left_padding"
                    android:paddingTop="@dimen/button_top_padding"
                    android:paddingRight="@dimen/button_right_padding"
                    android:paddingBottom="@dimen/button_bottom_padding"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="15dp" />
        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>