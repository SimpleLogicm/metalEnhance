<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:padding="@dimen/common_10_dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/Quotation_Details"
        android:textColor="#5A5A5A"
        android:textSize="17dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="7dp"
        android:background="#111111" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/common_15_dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.00" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/Description"
                android:textColor="#5A5A5A"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.00" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/Amount"
                android:textColor="#5A5A5A"
                android:textStyle="bold"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

   
<!-- <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> -->
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#111111" >
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
    <com.msimplelogic.swipelistview.SwipeListView
        android:id="@+id/list_statusclick"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:listSelector="#00000000"
        swipe:swipeBackView="@+id/back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
android:layout_above="@+id/spinner_addmore"
        swipe:swipeDrawableChecked="@drawable/choice_selected"
        swipe:swipeDrawableUnchecked="@drawable/choice_unselected"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="none" />

        <LinearLayout
            android:id="@+id/total_amount_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/expected_lout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#111111"
                android:text="Total Amount :" />

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expected_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reason_lout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Expected Amount :"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/expected_amount"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_weight="8"
                android:inputType="numberDecimal"
                android:textSize="12dp"
                android:gravity="center|left"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reason_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/approved_lout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_reason"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#111111" />

            <EditText
                android:id="@+id/edit_reason"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_weight="1.5"
                android:inputType="text"
                android:textSize="12dp"
                android:gravity="center|left"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/approved_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/but_addmore_click"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#111111"
                android:text="Approved Amount :" />

            <TextView
                android:id="@+id/approved_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="" />
        </LinearLayout>

        <Button
            android:id="@+id/butapprove_listclick"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/butback_listclick"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/metal_button"
            android:text="@string/Submit_for_Approval"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />

        <Button
            android:id="@+id/butback_listclick"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/metal_button"
            android:text="@string/Back_button"
            android:textAllCaps="false"
            android:layout_marginLeft="12dp"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <Button
            android:id="@+id/but_addmore_click"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_above="@+id/butapprove_listclick"
            android:layout_centerHorizontal="true"
            android:background="#414042"
            android:text="ADD MORE"
            android:visibility="gone"
            android:layout_marginBottom="7dp"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />

        <Button
            android:id="@+id/but_convert_order"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/butback_listclick"
            android:layout_alignParentRight="true"
            android:background="@drawable/metal_button"
            android:visibility="gone"
            android:text="@string/convert_to_order"
            android:layout_marginRight="2dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />

        <Spinner
            android:id="@+id/spinner_addmore"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_above="@+id/total_amount_lout"
            android:layout_centerHorizontal="true"
            android:text="ADD MORE"
            android:textSize="13dp" />

        <Spinner
            android:id="@+id/spinner_modify"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/total_amount_lout"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/btn_addmorenew"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/list_statusclick"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@android:drawable/ic_input_add"
            />

    </RelativeLayout>
<!--</ScrollView>-->
</LinearLayout>