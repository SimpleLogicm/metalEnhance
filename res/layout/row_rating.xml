<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_10_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/common_10_dp"
        android:layout_marginBottom="@dimen/common_5_dp"
        app:cardBackgroundColor="?attr/cardbackground"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/common_5_dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_ratingtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans"
                    android:text="vahug"
                    android:textColor="?filter_short_text_color"
                    android:textSize="18sp">

                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ratingbox"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ratingtext"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:padding="@dimen/common_5_dp"
                        android:textSize="12dp"
                        android:textColor="?attr/hint_text_color"
                        android:layout_height="wrap_content">

                    </TextView>

                    <ImageView
                        android:layout_width="@dimen/common_15_dp"
                        android:src="@drawable/star"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/common_15_dp">

                    </ImageView>




                </LinearLayout>


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="vahug"
                    android:textColor="?attr/visit_schedule_historytext"
                    android:textSize="16sp">

                </TextView>



            </LinearLayout>






        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>