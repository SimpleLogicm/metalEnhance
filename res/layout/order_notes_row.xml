<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/common_10_dp"
        android:layout_marginBottom="@dimen/common_5_dp"
        app:cardBackgroundColor="?attr/cardbackground"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_10_dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_ordertitle"
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans"
                    android:text="vahug"
                    android:textColor="?filter_short_text_color"
                    android:textSize="16sp">

                </TextView>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="@dimen/common_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/work_sans"
                    android:gravity="right"
                    android:text="vahug"
                    android:textColor="?attr/visit_schedule_historytext"
                    android:textSize="16sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/common_10_dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ss_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans"
                    android:text="fghfgh"
                    android:textColor="?filter_short_text_color"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/ss_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:text=""
                    android:textColor="?filter_short_text_color"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>