<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@drawable/metal_bg_all"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Contact_Us"
    tools:showIn="@layout/about_metal_main"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Metal_Header_descri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Metal_Header"
                android:padding="4dp"
                android:text=""
                android:textStyle="bold"
                android:textColor="#080707"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Metal_Header_descri"
                android:layout_marginTop="1dp"
                android:padding="4dp"
                android:text=""
                android:textColor="#222"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/discriptionnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:padding="4dp"
                android:text=""
                android:textColor="#080707"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discriptionnew"
                android:maxLines="3"
                android:padding="4dp"
                android:text="@string/Call_us"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/phonenext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:maxLines="3"
                android:padding="4dp"
                android:text=""
                android:textColor="#080707"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phonenext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonenext"
                android:layout_marginBottom="5dp"
                android:maxLines="3"
                android:padding="4dp"
                android:text=""
                android:textColor="#080707"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="4dp"
                android:text=""
                android:textColor="#080707"
                android:textSize="13dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/email1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="7dp" />

            <TextView
                android:id="@+id/email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="10dp"
                android:maxLines="3"
                android:padding="4dp"
                android:text=""
                android:textColor="#080707"
                android:textSize="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/phonenext"
                android:layout_alignBottom="@+id/phonenext"
                android:layout_below="@+id/email" />



            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="@string/Email_Us"
                android:layout_marginRight="29dp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/phone"
                android:layout_below="@+id/discriptionnew"
                android:layout_alignRight="@+id/email1"
                android:layout_alignEnd="@+id/email1"
                android:layout_marginEnd="29dp" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/white_background"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/Metal_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=""
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

            <TextView
                android:id="@+id/webtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:autoLink="web"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:padding="4dp"
                android:text="@string/Visit_our_websites"
                android:textColor="#080707"
                android:textSize="15dp"
                />
        </RelativeLayout>>
    </androidx.cardview.widget.CardView>
</ScrollView>