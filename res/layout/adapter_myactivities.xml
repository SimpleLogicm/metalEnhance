<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:background="?attr/cardbackground"
    android:orientation="vertical">

    <!--<androidx.cardview.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--card_view:cardElevation="@dimen/common_5_dp"-->
        <!--android:layout_marginTop="@dimen/common_5_dp"-->
        <!--android:layout_gravity="center"-->
        <!--card_view:cardCornerRadius="@dimen/common_10_dp">-->

        <RelativeLayout
            android:id="@+id/hor_rlout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_60_dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10_dp"
                android:layout_toRightOf="@+id/timeline"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvmyactivity_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="?attr/filter_short_text_color"
                    android:text="Remark" />

                <TextView
                    android:id="@+id/tvmyactivity_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:drawableTint="?attr/New_orderoption_menueoptions_textcolor"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:textColor="?attr/hint_text_color"
                    android:text="dfghfdh" />

                <TextView
                    android:id="@+id/tvmyactivity_shopvisited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="?attr/hint_text_color"
                    android:drawableTint="?attr/New_orderoption_menueoptions_textcolor"
                    android:drawableLeft="@drawable/ic_directions_walk_black_24dp"
                    android:text="$dfghfdh" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C5C6"></View>

            </LinearLayout>

            <com.github.vipulasri.timelineview.TimelineView
                android:id="@+id/timeline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:markerSize="10dp"
                app:lineWidth="1dp"
                app:lineStyle="dash"
                app:markerPaddingTop="0dp"
                app:markerPaddingBottom="0dp"
                android:layout_toRightOf="@+id/dsfg"
                app:startLineColor="#023661"
                app:endLineColor="#3084D0"

                />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/vertical_line"
                android:visibility="gone"
                android:layout_toRightOf="@+id/dsfg">

            </View>

            <LinearLayout
                android:id="@+id/dsfg"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvmyactivity_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:gravity="left|top"
                    android:textColor="?attr/hint_text_color"
                    android:text="dfghfdh" />

            </LinearLayout>

        </RelativeLayout>
    <!--</androidx.cardview.widget.CardView>-->

</LinearLayout>