<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_10_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/common_10_dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:visibility="gone"
        android:id="@+id/card1_img"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/common_10_dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_planogram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Planogram"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                android:textColor="@color/primarycolor"

                >

            </TextView>

            <TextView
                android:id="@+id/tv_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/Picture"
                android:textStyle="bold"
                android:fontFamily="@font/work_sans"
                >

            </TextView>
            <LinearLayout
                android:layout_marginTop="@dimen/common_5_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/round_corner_transperant"
                    android:id="@+id/imgshow"
                    android:src="@drawable/metal_pro"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                </ImageView>

             <LinearLayout
                 android:id="@+id/capture_btn"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_marginLeft="@dimen/common_10_dp"
                 android:background="@drawable/round_corner_black"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:orientation="vertical">
                     <ImageView
                         android:layout_width="@dimen/common_30_dp"
                         android:src="@drawable/cam"
                         android:layout_height="30dp"
                         >

                     </ImageView>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:text="Click an image"
                         android:textSize="10sp">

                     </TextView>
                 </LinearLayout>

             </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2_radio"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/common_10_dp"
        app:cardElevation="@dimen/common_4_dp"
        android:layout_marginBottom="@dimen/common_10_dp"
        app:cardCornerRadius="@dimen/common_10_dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/common_10_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/radio_que_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/work_sans"
                android:text="@string/is_locatin_maintend">


            </TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myRadioGroup"
                android:layout_marginTop="0dp"
               >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textSize="12dp"
                    android:id="@+id/option_yes"
                    android:text="@string/Yes" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/option_no"
                    android:checked="false"
                    android:textSize="12dp"
                    android:text="@string/No" />



            </RadioGroup>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>