<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp">



        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/common_10_dp"
            android:background="@drawable/btnstyle"
            android:fontFamily="@font/work_sans"
            android:text="@string/Place_Order"
            android:textColor="#ffffff">

        </Button>

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/swipe"
            android:src="@drawable/timeliner3"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginRight="@dimen/common_30_dp"
            android:layout_marginLeft="@dimen/common_30_dp"
            >

        </ImageView>


        <androidx.cardview.widget.CardView
            android:layout_below="@+id/swipe"
            android:id="@+id/signature_card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardElevation="10dp"

            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.5"
                        android:text="@string/Please_Sign_below"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black_overlay" />

                    <TextView
                        android:id="@+id/tv_btn_clear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/common_10_dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/work_sans"
                        android:gravity="right"
                        android:text="@string/Clear"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>


                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/signature_pad"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:penColor="@android:color/black" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signature_card_view2"
            android:layout_margin="@dimen/common_10_dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/signuptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans"
                android:text="Letterhead Snap"
                android:textSize="16sp">

            </TextView>

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="30dp"
                android:layout_height="@dimen/common_20_dp"
                android:src="@drawable/cam">

            </ImageView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>