<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".kotlinFiles.Order_notes"
    tools:showIn="@layout/activity_order_notes">
    <LinearLayout
        android:id="@+id/linearMian"
        android:layout_width="match_parent"
        android:background="?attr/fulllayoutbg"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/hedder_theame"
        android:layout_width="match_parent"
        android:src="@drawable/light_hedder"
        android:scaleType="fitXY"
        android:layout_height="70dp">

    </ImageView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/common_10_dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        style="@style/welcometext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Notes"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16sp">

                    </TextView>

                    <TextView
                        android:id="@+id/total_count"
                        style="@style/welcometext"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:text="(0)"
                        android:textColor="?attr/filter_short_text_color"
                        android:textSize="16sp">

                    </TextView>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_nots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10_dp">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/tv_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:fontFamily="@font/work_sans"
                    android:text="@string/View_all"
                    android:textColor="?attr/visit_schedule_historytext"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/cardbackground"
                    android:layout_marginTop="@dimen/common_10_dp"
                    app:cardCornerRadius="@dimen/common_10_dp"
                    app:cardElevation="@dimen/common_4_dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_10_dp"
                            android:backgroundTint="#c3c3c3"
                            android:clickable="false"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/work_sans"
                            android:hint="@string/Customer_Name"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor">

                        </EditText>

                        <EditText
                            android:id="@+id/et_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_10_dp"
                            android:backgroundTint="#c3c3c3"
                            android:fontFamily="@font/work_sans"
                            android:hint="@string/Title"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor">

                        </EditText>

                        <EditText
                            android:id="@+id/et_discription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_10_dp"
                            android:backgroundTint="#c3c3c3"
                            android:cursorVisible="true"
                            android:fontFamily="@font/work_sans"
                            android:hint="@string/Description"
                            android:textColorHint="?attr/hint_text_color"
                            android:textColor="?attr/New_orderoption_menueoptions_textcolor">

                        </EditText>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/common_10_dp"
                    android:background="@drawable/btnstyle"
                    android:fontFamily="@font/work_sans"
                    android:text="@string/Save"
                    android:textColor="@color/white">

                </Button>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</RelativeLayout>